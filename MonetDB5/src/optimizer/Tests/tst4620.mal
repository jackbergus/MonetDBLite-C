function algebra.joinPath( a:bat[:any_1,:any_2],
                b:bat[:any_2,:any_3],
                c:bat[:any_3,:any_4]):bat[:any_1,:any_4];
    z:= algebra.join(a,b);
    zz:= algebra.join(z,c);
    return zz;
end joinPath;

