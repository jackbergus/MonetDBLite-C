MTSAFE
INCLUDES = -I../mal $(MONETDB_INCS) $(MONETDBCLIENTS_INCS) 

bin_mserver5 = {
	SOURCES = mserver5.mx
	LIBS = ../mal/libmal @SHARED_LIBS@ $(MONETDB_LIBS) -lbat -lmutils -lstream \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS)
}

bin_merovingian = {
	SOURCES = merovingian.mx
	LIBS = ../mal/libmal @SHARED_LIBS@ -lstream \
		   $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
		   $(MALLOC_LIBS)
}

lib_embeddedmal = {
	SOURCES = embeddedclient.mx
	LIBS = ../mal/libmal @SHARED_LIBS@ $(MONETDB_LIBS) -lbat -lmutils -lstream $(MONETDBCLIENTS_LIBS) -lMapi \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS)
}

bin_Mbeddedmal = {
	SOURCES = prog.c
	LIBS = libembeddedmal ../mal/libmal @SHARED_LIBS@ $(MONETDB_LIBS) -lbat -lmutils -lstream $(MONETDBCLIENTS_LIBS) -lMapi \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS)
}


scripts_sh = {
	EXT = ""
	DIR = bindir
	SOURCES = monetdb5-config.in monetdb mguardian mchkpnt mrecover mclient
}

scripts_bat = {
	DIR = bindir
	SOURCES = monetdb5-config.bat.in 
}
