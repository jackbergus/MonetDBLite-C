MTSAFE
INCLUDES = -I../mal -I$(MONETDB_INCLUDEDIR)/C $(MONETDB_INCS) $(PTHREAD_INCS) 

bin_mserver = {
	SOURCES = mserver.mx
	LIBS = ../mal/libmal @SHARED_LIBS@ $(MONETDB_LIBS) -lbat -lmutils -lstream \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS)
}

lib_embeddedmal = {
	SOURCES = embeddedclient.mx
	LIBS = ../mal/libmal @SHARED_LIBS@ $(MONETDB_LIBS) -lbat -lmutils -lstream -lMapi \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS)
}

bin_Mbeddedmal = {
	SOURCES = prog.c
	LIBS = libembeddedmal ../mal/libmal @SHARED_LIBS@ $(MONETDB_LIBS) -lbat -lmutils -lstream -lMapi \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS)
}


scripts_sh = {
	EXT = ""
	DIR = bindir
	SOURCES = monetdb5-config.mx.in monetdb mguardian mchkpnt
}

scripts_bat = {
	DIR = bindir
	SOURCES = monetdb5-config.bat.in 
}
