MTSAFE
INCLUDES = -I../mal \
	$(monetdbmapi_CFLAGS) $(monetdbcommon_CFLAGS) $(monetdbstream_CFLAGS) \
	$(openssl_CFLAGS) $(pcre_CFLAGS) $(libxml2_CFLAGS)

lib_monetdb5 = {
	NAME = monetdb5
	SCRIPTS = mal
	DIR = libdir
	SOURCES = libmonetdb5.rc
	LIBS = ../mal/libmal ../modules/atoms/libatoms \
		../modules/kernel/libkernel ../modules/mal/libmal \
		../optimizer/liboptimizer ../scheduler/libscheduler \
		$(monetdbcommon_LIBS) $(monetdbstream_LIBS) $(monetdbmapi_LIBS) \
		$(MATH_LIBS) $(SOCKET_LIBS) $(MALLOC_LIBS) $(PTHREAD_LIBS) \
		$(DL_LIBS) $(READLINE_LIBS) $(openssl_LIBS) $(pcre_LIBS) \
		$(LTLIBICONV) $(zlib_LIBS)
}

bin_mserver5 = {
	SOURCES = mserver5.mx monet_version.h monet_version.c.in
	LIBS = libmonetdb5 @SHARED_LIBS@ \
		$(monetdbcommon_LIBS) $(monetdbstream_LIBS) \
		$(SOCKET_LIBS) $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS) \
		$(PCRE_LIBS) $(OPENSSL_LIBS)
}

lib_embeddedmal = {
	SOURCES = embeddedclient.c.in
	LIBS = libmonetdb5 @SHARED_LIBS@ \
		$(monetdbcommon_LIBS) $(monetdbstream_LIBS) $(monetdbmapi_LIBS) \
		$(SOCKET_LIBS) $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS)
}

bin_Mbeddedmal = {
	SOURCES = prog.c
	LIBS = libembeddedmal @SHARED_LIBS@ \
		$(monetdbcommon_LIBS) $(monetdbstream_LIBS) $(monetdbmapi_LIBS) \
		$(SOCKET_LIBS) $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS)
}

headers_h = {
	HEADERS = h
	DIR = includedir/MonetDB5/tools
	SOURCES = embeddedclient.h
}

headers_pc = {
	COND = NOT_WIN32
	HEADERS = pc
	DIR = libdir/pkgconfig
	SOURCES = monetdb-mal.pc.in monetdb-embeddedclient.pc.in
}

EXTRA_DIST_DIR = Tests
