MTSAFE
INCLUDES = -I../mal $(CLIENTS_INCS) $(MONETDB_INCS) $(OPENSSL_INCS) $(PCRE_CFLAGS) $(LIBXML2_CFLAGS)

bin_mserver5 = {
	SOURCES = mserver5.mx monet_version.h monet_version.c.in
	LIBS = ../mal/libmonetdb5 @SHARED_LIBS@ $(MONETDB_LIBS) \
                -lbat -lmutils -lstream \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS) \
                $(PCRE_LIBS) $(OPENSSL_LIBS)
}

lib_embeddedmal = {
	SOURCES = embeddedclient.c.in
	LIBS = ../mal/libmonetdb5 @SHARED_LIBS@ $(MONETDB_LIBS) -lbat -lmutils -lstream $(CLIENTS_LIBS) -lMapi \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS)
}

bin_Mbeddedmal = {
	SOURCES = prog.c
	LIBS = libembeddedmal @SHARED_LIBS@ $(MONETDB_LIBS) -lbat -lmutils -lstream $(CLIENTS_LIBS) -lMapi \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS)
}

headers_h = {
	HEADERS = h
	DIR = includedir/MonetDB5/tools
	SOURCES = embeddedclient.h
}

headers_pc = {
	COND = NOT_WIN32
	HEADERS = pc
	DIR = libdir/pkgconfig
	SOURCES = monetdb-embeddedclient.pc.in
}

EXTRA_DIST_DIR = Tests
