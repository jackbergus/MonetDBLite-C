{
	fprintf(stderr, "Usage: %s [options] [scripts]\n", prog);
	fprintf(stderr, "    --dbname=<database_name> \n");
	fprintf(stderr, "    --dbfarm=<database_directory> \n");
    fprintf(stderr,"     --version                 \n");
    fprintf(stderr,"     --help        for more details\n");
	exit(0);
}
