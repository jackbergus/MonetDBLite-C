# The mguardian looks after the healthyness of invidual servers
# A mguardian process is run for each mserver unless you specify
# otherwise.
# The mguardian control information is kept in .mguardian and
# consists of the <delay,pid> pair

function usage()
{
	echo "Usage: mguardian [options] [mserver(s)]"
	echo "    --start        Start looking after mserver(s)"
	echo "    --stop         Stop looking after mserver(s) "
	echo "    --delay        Set check delay to N seconds [300]"
	echo "    --status       Status of all servers"
	echo "    --log          Display the server log"
	echo "    --help         This list of options"
}

DBFARM=$MONET5_PREFIX/var/MonetDB5/dbfarm
DELAY=300
ACTION=start


case "$1" in
 "--start" )
	ACTION=start
	shift
	;;
 "--stop" )
	ACTION=stop
	shift
	;;
 "--delay="* )
	delay=`echo $1|sed -e "s/--delay=//"`
	if [ $delay"" != "" ]
	then 
		DELAY=$delay
	fi
	ACTION=delay
	shift
	;;
 "--log" )
	monetdb --log
	exit
	;;
 "--status" )
	monetdb --status
	exit
	;;
 "--help" | * )
	usage 
	exit 0 ;;
esac

cd $DBFARM
if [ "$*" != "" ]
then
	DBLIST=$*
else
	DBLIST=`ls`
fi

tmp=`echo $* | sed -e "s/^.*--dbname=//"|sed -e "s/ .*//"`
if [ "$tmp" != "" ]
then
	DBLIST=$tmp
fi

function getPID ()
{
	active=""
	if [ -f $1/.gdk_lock ]
	then
		pid=`head -1 $1/.gdk_lock |sed -e "s/.*PID=//"|sed -e "s/ .*//"`
		active=`ps --no-heading --format pid -p $pid`
	fi
	echo $active
}

#for each mserver a separate mguardian process is started
#it runs in the background until the mguardian control file disappears
function check_mserver()
{
	mypid=$!
	if [ -f $1/.mguardian ]
	then
		delay=`head -1 $1/.mguardian| sed -e "s/,.*//"`
	else
		delay=$DELAY
	fi
	echo "$delay,$!" >$1/.mguardian
	echo `date +"%F %T"` " GUARD $1 " >>monetdb.log

	pid=`getPID $1`

	while [ -f $1/.mguardian ]
	do
		active=`ps --no-heading --format pid -p $pid`
		if  [ $active"" = "" ]
		then
			if [ -f $1/.mserver.args ]
			then
				args=`cat $1/.mserver.args`
			else
				args=""
			fi
            mserver --set daemon=yes --dbname=$1 $args &
			echo `date +"%F %T"` " RESTART $1 $args" >>monetdb.log
			pid=`getPID $1`
		fi
		# we should pick a cheaper way to detect changes to the delay
		#echo "sleep guarding $1 $delay seconds"
		delay=`head -1 $1/.mguardian| sed -e "s/,.*//"`
		echo "$delay,$mypid" >$i/.mguardian
		sleep $delay
	done
	echo `date +"%F %T"` " LEAVE $1 " >>monetdb.log
	exit
}

#ignore a server also involves killing any running mguardian
# for it. 
function stop_guardian()
{
	pid=`getPID $1`
	if [ -f $1/.mguardian ]
	then
		pid=`head -1 $1/.mguardian |sed -e "s/.*,//"`
		delay=`head -1 $1/.mguardian |sed -e "s/,.*//"`
	
		if [ $pid"" != "" ]
		then
			kill -TERM $pid
			echo `date +"%F %T"` " LEAVE $1 " >>monetdb.log
			echo "$delay," >$1/.mguardian
		fi
	fi
}


# first terminate other mguardians
# todo

case $ACTION in
	"start" )
		for i in $DBLIST
		do
			if [ -f $i/.mguardian ]
			then
				 ( check_mserver  $i )  &
			fi
		done
		;;
	"stop" )
		for i in $DBLIST
		do
			if [ -d $i ]
			then
				stop_guardian $i
			fi
		done
		;;
	"delay" )
		for i in $DBLIST
		do
			if [ -d $i ]
			then
				stop_guardian $i
				echo "$DELAY," >$i/.mguardian
				( check_mserver  $i )  &
			fi
		done
		;;
esac
