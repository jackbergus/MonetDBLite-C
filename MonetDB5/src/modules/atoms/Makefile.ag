INCLUDES = -I../../mal $(MONETDB_INCS) \
	$(Z_CFLAGS) $(BZ_CFLAGS) $(HWCOUNTERS_INCS) $(PCL_CFLAGS) \
	$(LIBXML2_CFLAGS) $(ICONV_CFLAGS)
MTSAFE

LIBS = {
	DIR = libdir/MonetDB5
	SEP = _
	SOURCES = blob.mx url.mx mtime.mx streams.mx inet.mx color.mx \
			  rmtobj.mx identifier.mx

	#SCRIPTS = mal
	LIBS = $(MONETDB_LIBS) -lbat -lstream $(MATH_LIBS) \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS) ../../mal/libmonetdb5
}

lib__str = {
	DIR = libdir/MonetDB5
	SEP = _
	SOURCES = str.mx 

	#SCRIPTS = mal
	LIBS = $(MONETDB_LIBS) -lbat -lstream \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS) \
		$(ICONV_LIBS) ../../mal/libmonetdb5
}

lib__xml = {
	COND = HAVE_LIBXML2
	DIR = libdir/MonetDB5
	SEP = _
	SOURCES = xml.mx 

	#SCRIPTS = mal
	LIBS = $(MONETDB_LIBS) -lbat -lstream \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS) \
		$(LIBXML2_LIBS) $(ICONV_LIBS) ../../mal/libmonetdb5
}

headers_h = {
	DIR = includedir/MonetDB5/atoms
	SOURCES = blob.mx url.mx mtime.mx streams.mx inet.mx color.mx \
			  xml.mx str.mx rmtobj.mx identifier.mx
	HEADERS = h 
}


headers_mal = {
	HEADERS = mal
	DIR = libdir/MonetDB5
	SOURCES = str.mx blob.mx url.mx mtime.mx streams.mx inet.mx color.mx \
			  xml.mx rmtobj.mx identifier.mx
}

EXTRA_DIST_DIR = Tests
