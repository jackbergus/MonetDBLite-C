INCLUDES = -I../../atoms -I../../kernel \
        -I../../../mal $(CLIENTS_INCS) $(MONETDB_INCS) $(RAPTOR_INCS) \
        $(Z_CFLAGS) $(BZ_CFLAGS) $(PCRE_CFLAGS) \
        $(LIBXML2_CFLAGS) $(READLINE_INCS)

MTSAFE

lib__rdf = {
	COND = HAVE_RAPTOR
	DIR = libdir/MonetDB5
	SOURCES = rdf.mx rdf_shredder.mx
	LIBS = ../../../mal/libmonetdb5 $(MONETDB_LIBS) -lbat -lstream \
           ../../atoms/lib_url \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS) \
                $(RAPTOR_LIBS)
}

headers_rdf = {
	COND = HAVE_RAPTOR
	DIR = includedir/MonetDB5/rdf
	SOURCES = rdf.mx rdf_shredder.mx
	HEADERS = h
}

headers_mal = {
	COND = HAVE_RAPTOR
	HEADERS = mal
	DIR = libdir/MonetDB5
	SOURCES = rdf.mx
}

