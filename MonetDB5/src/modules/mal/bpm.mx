	BAT *b;
	int i;
	int (*cmp) (ptr, ptr);
	ptr nilptr, low, hgh;
	(void) mb;

	ret= (bat *)getArgReference(stk, pci, 0);
	bid= (bat *)getArgReference(stk, pci, 1);
	low= (ptr) getArgReference(stk, pci, 2);
	hgh= (ptr) getArgReference(stk, pci, 3);

