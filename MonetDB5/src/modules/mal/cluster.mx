@= map_fixed
void
CLUSTER_key_@1( BAT *map, BAT *b)
{
	@1 *bt, *be;
	oid *o;

	o = (oid*)Tloc(map, BUNfirst(map));
	bt = (@1*)Tloc(b, BUNfirst(b));
	be = bt + BATcount(b);
	for ( ; bt < be; bt++){
		BUN h = hash_@1(b->T->hash,bt);
		*o++= h;
	}
}

str  
CLUSTER_column_@1(BAT *nb, BAT *b, BAT *cmap)
{
	@1 *r;
	oid *ct, *ce;
	BUN p;
	BATiter bi= bat_iterator(b);
	int cnt=0;
	
	r = (@1*)Tloc(nb, BUNfirst(nb));
	ct = (oid *)Tloc(cmap, BUNfirst(cmap));
	ce = ct + BATcount(cmap);
	for ( ; ct < ce; ct++){
		p = BUNfnd(b,(ptr) ct);
		*r++ = *(@1*) BUNtail(bi,p);
		if ( (++cnt % 1000000) == 0)
			BATsave(nb);
	}
	BATsave(nb);
	return MAL_SUCCEED;
}

