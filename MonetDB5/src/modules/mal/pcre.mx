str
pcre_match(bit *ret, str *val, str *pat)
{
	regex_t prg;
	int error = regcomp(&prg, *pat, REG_EXTENDED | REG_NOSUB);

	if (error < 0)
		return throwMessage("pcre.match", "Compilation of regular expression failed");
	error = regexec(&prg, *val, 0, 0, 0);
	*ret = (error == 0);
	return MAL_SUCCEED;
}
