remote_export str RMTcreate(str *ret, str *dbname, str *host, int *port);
@c
/**
 * Stores a new connection in the global state.  The connection is not
 * validated.
 */
str RMTcreate(str *ret, str *dbname, str *host, int *port) {
	userconn c;

	*ret = 0;

	if (dbname == NULL || *dbname == NULL || strcmp(*dbname, (str)str_nil) == 0)
		throw(ILLARG, "remote.create", ILLEGAL_ARGUMENT " Database name is NULL or nil");
	if (host == NULL || *host == NULL || strcmp(*host, (str)str_nil) == 0)
		throw(ILLARG, "remote.create", ILLEGAL_ARGUMENT " Hostname is NULL or nil");
	if (port == NULL || *port <= 0)
		throw(ILLARG, "remote.create", ILLEGAL_ARGUMENT " Port is NULL or <= 0");

	mal_set_lock(mal_remoteLock, "remote.create"); /* global userconns */
	/* find a free slot, start with special case of connections not
	 * being set */
	if (userconns == NULL) {
		userconns = GDKzalloc(sizeof(struct _userconn));
		c = userconns;
	} else {
		/* ok, it's set, so find the last element in the list */
		userconn t = c = userconns;
		do {
			/* at the same time also check if this connection name
			 * already exists */
			if (strcmp(c->dbname, *dbname) == 0) {
				mal_unset_lock(mal_remoteLock, "remote.create"); /* global userconns */
				throw(MAL, "remote.create", OPERATION_FAILED ": connection with name "
						"'%s' already exists", *dbname);
			}
			t = c;
			c = c->next;
		} while (c != NULL);
		c = t->next = GDKzalloc(sizeof(struct _userconn));
	}

	/* fill in the new entry */
	c->dbname = GDKstrdup(*dbname);
	c->host = GDKstrdup(*host);
	c->port = *port;
	c->next = NULL;

	mal_unset_lock(mal_remoteLock, "remote.create"); /* global userconns */
	*ret = GDKstrdup(*dbname);
	return(MAL_SUCCEED);
}

@h
remote_export str RMTdestroy(int *ret, str *dbname);
@c
/**
 * Removes a connection in the global state.  If the connection is in
 * use by a client, it will remain available for that client.
 */
str RMTdestroy(int *ret, str *dbname) {
	userconn c, t;

	if (dbname == NULL || *dbname == NULL || strcmp(*dbname, (str)str_nil) == 0)
		throw(ILLARG, "remote.destroy", ILLEGAL_ARGUMENT " Connection name is NULL or nil");

	/* just make sure the return isn't garbage */
	*ret = 0;

	mal_set_lock(mal_remoteLock, "remote.destroy"); /* global connections */
	c = userconns;
	t = NULL;
	/* walk through the list */
	while (c != NULL) {
		if (strcmp(c->dbname, *dbname) == 0) {
			/* ok, delete it... */
			if (t == NULL) { /* the top */
				t = c->next;
				GDKfree(c->dbname);
				GDKfree(c->host);
				GDKfree(c);
				userconns = t;
			} else {
				/* connect the grand child to the grand parent */
				t->next = c->next;
				/* and kill the parent in the middle */
				GDKfree(c->dbname);
				GDKfree(c->host);
				GDKfree(c);
			}

			mal_unset_lock(mal_remoteLock, "remote.destroy");
			return(MAL_SUCCEED);
		}
		c = c->next;
	}

	mal_unset_lock(mal_remoteLock, "remote.destroy");
	throw(MAL, "remote.destroy", OPERATION_FAILED " No such connection with name '%s'", *dbname);
}

@h
remote_export str RMTgetList(int *ret, int *ret2);
@c
#define SOCKPTR struct sockaddr *
/**
 * Returns a BAT with available connections.  In the head the dbname is
 * stored, in the tail "user", "self", "local" or "remote".  The entries
 * grouped in that order.  If merovingian is not running, only running
 * local databases are returned.
 */
str RMTgetList(int *ret, int *ret2) {
	BAT *list, *kind;
	str type;
	userconn c;
	sabdb *sab, *osab, *me;
	str tmp;
	char mero_running;
#ifndef WIN32
	char path[8096];
	int fd;

	mero_running = 1;
	snprintf(path, 8096, "%s/.merovingian_lock", GDKgetenv("gdk_dbfarm"));
	fd = MT_lockf(path, F_TLOCK, 4, 1);
	if (fd >= 0 || fd <= -2) {
		if (fd >= 0) {
			/* oops, not running */
			close(fd);
		}
		mero_running = 0;
	}
#else
	/* on windos we just simply say merovingian doesn't run */
	mero_running = 0;
#endif

	list = BATnew(TYPE_oid, TYPE_str, 20);
	if (list == NULL)
		throw(MAL, "remote.getList", MAL_MALLOC_FAIL);
	kind = BATnew(TYPE_oid, TYPE_str, 20);
	if (kind == NULL){
		BBPunfix(list->batCacheid);
		throw(MAL, "remote.getList", MAL_MALLOC_FAIL);
	}

	/* part 1: "user" -- this is trivial */
	type = "user";
	mal_set_lock(mal_remoteLock, "remote.list");
	c = userconns;
	/* walk through the list */
	while (c != NULL) {
		BUNappend(list, (ptr)c->dbname, FALSE);
		BUNappend(kind, (ptr)type, FALSE);
		c = c->next;
	}
	mal_unset_lock(mal_remoteLock, "remote.list");

	/* part 2: "self" -- contact Sabaoth */
	type = "self";
	rethrow("remote.list", tmp, SABAOTHgetMyStatus(&me));
	/* it is REALLY strange if you can have an operational server
	 * without a database */
	assert(me != NULL);
	BUNappend(list, (ptr)me->dbname, FALSE);
	BUNappend(kind, (ptr)type, FALSE);

	/* part 3: "local" -- bit more tricky, contact Sabaoth */
	type = "local";
	rethrow("remote.list", tmp, SABAOTHgetStatus(&osab, NULL));
	sab = osab;
	while (sab != NULL) {
		if ((mero_running == 1 || sab->state == SABdbRunning) &&
				strcmp(sab->dbname, me->dbname) != 0)
		{
			BUNappend(list, (ptr)sab->dbname, FALSE);
			BUNappend(kind, (ptr)type, FALSE);
		}
		sab = sab->next;
	}
	SABAOTHfreeStatus(&osab);
	SABAOTHfreeStatus(&me);

	/* part 4: "remote" -- ask merovingian over a UNIX socket, oops
	 *                     portability issues! */
	type = "remote";
#ifndef WIN32
	/* if Merovingian isn't running, there's not much we can do */
	if (mero_running == 1) do {
		char buf[256];
		int sock = -1;
		struct sockaddr_un server;
		char *p, *q;
		int len;
		int pos;

		snprintf(path, 8095, "%s/.merovingian_control", GDKgetenv("gdk_dbfarm"));
		path[8095] = '\0';

		if ((sock = socket(AF_UNIX, SOCK_STREAM, 0)) < 0)
			break;

		memset(&server, 0, sizeof(struct sockaddr_un));
		server.sun_family = AF_UNIX;
		strncpy(server.sun_path, path, sizeof(server.sun_path) - 1);
		if (connect(sock, (SOCKPTR) &server, sizeof(struct sockaddr_un)))
			break;

		/* Send the pass phrase to unlock the information available in
		 * merovingian.  Anelosimus eximius is a social species of spiders,
		 * which help each other, just like merovingians do among each
		 * other. */
		len = snprintf(buf, sizeof(buf), "anelosimus eximius\n");
		send(sock, buf, len, 0);
		pos = 0;
		len = 0;
		buf[len] = '\0';
		do {
			if ((p = strchr(buf, '\n')) == NULL) {
				if (len == sizeof(buf) - 1) {
					/* no newline in this block, too large, discard */
					pos = 0;
				} else {
					pos = len;
				}
				len = recv(sock, buf + pos, sizeof(buf) - 1 - pos, 0);
				/* if there is no more... */
				if (len <= 0)
					break;
				len += pos;
				buf[len] = '\0';
				continue;
			}
			*p++ = '\0';

			if ((q = strchr(buf, '\t')) == NULL) {
				/* doesn't look correct */
				len -= p - buf;
				memmove(buf, p, len + 1 /* include \0 */);
				continue;
			}
			*q++ = '\0';

			/* store what we found */
			BUNappend(list, (ptr)buf, FALSE);
			BUNappend(kind, (ptr)type, FALSE);

			/* move it away */
			len -= p - buf;
			memmove(buf, p, len + 1 /* include \0 */);
		} while (1);

		close(sock);
	} while (0);
#endif

	BBPkeepref(*ret = list->batCacheid);
	BBPkeepref(*ret2 = kind->batCacheid);
	return(MAL_SUCCEED);
}


/**
 * Helper function to return a userconn struct containing the bits needed
 * to open up a connection.  This function is very similar to
 * RMTgetList, but differs on enough crucial points to warrant its own
 * copy.
 * NOTE: this function assumes the caller has guaranteed
 * thread-safeness, e.g. by setting the mal_remoteLock!!!
 */
static INLINE userconn RMTgetConnDefinition(str dbname) {
	userconn c;
	sabdb *sab, *osab;
	str tmp;
	char path[8096];
	userconn ret = NULL;
	char mero_running;
#ifndef WIN32
	int fd;
#endif

	/* part 1: "user" -- this is trivial */
	c = userconns;
	/* walk through the list */
	while (c != NULL) {
		if (strcmp(c->dbname, dbname) == 0) {
			ret = GDKzalloc(sizeof(struct _userconn));
			ret->dbname = GDKstrdup(c->dbname);
			ret->host = GDKstrdup(c->host);
			ret->port = c->port;
			break;
		}
	}
	if (ret != NULL)
		return(ret);

	/* part 2: "local" -- bit more tricky, contact Sabaoth, but for
	 *                    connection details, we better use Merovingian
	 *                    which needs to be available in that case... */
	mero_running = 0;
#ifndef WIN32
	mero_running = 1;
	snprintf(path, 8096, "%s/.merovingian_lock", GDKgetenv("gdk_dbfarm"));
	fd = MT_lockf(path, F_TLOCK, 4, 1);
	if (fd >= 0 || fd <= -2) {
		if (fd >= 0) {
			/* oops, not running */
			close(fd);
		}
		mero_running = 0;
	}
#endif

	if ((tmp = SABAOTHgetStatus(&osab, NULL)) != NULL) {
		/* if Sabaoth fails, Merovingian most probably won't have much
		 * luck either, so just return */
		GDKfree(tmp);
		return(NULL);
	}
	sab = osab;
	while (sab != NULL) {
		ret = NULL;
		if (strcmp(sab->dbname, dbname) == 0) {
			if (mero_running == 1) { /* use Merovingian */
				ret = GDKzalloc(sizeof(struct _userconn));
				ret->dbname = GDKstrdup(sab->dbname);
				gethostname(path, 8096);
				ret->host = GDKstrdup(path);
				ret->port = 0;
				tmp = GDKgetenv("mero_port");
				if (tmp != NULL)
					ret->port = atoi(GDKgetenv("mero_port"));
				if (ret->port == 0)
					ret->port = 50000;  /* hardcoded default from merovingian.mx */
				break;
			} else { /* just use the server's own connection */
				if (sab->state != SABdbRunning ||
						sab->conns == NULL || sab->conns->val == NULL)
				{
					/* only return this server if it's running and
					 * reachable */
					break;
				}
				ret = GDKzalloc(sizeof(struct _userconn));
				ret->dbname = GDKstrdup(sab->dbname);
				tmp = sab->conns->val;
				if (strncmp(tmp, "mapi:monetdb://", sizeof("mapi:monetdb://") - 1) == 0) {
					str port, t;
					tmp += sizeof("mapi:monetdb://") - 1;
					/* drop anything off after the hostname */
					if ((port = strchr(tmp, ':')) != NULL) {
						*port = '\0';
						port++;
						if ((t = strchr(port, '/')) != NULL)
							*t = '\0';
						ret->host = GDKstrdup(tmp);
						ret->port = atoi(port);
						break;
					}
				}
			}
			/* local ones must be unique */
			GDKfree(ret);
			ret = NULL;
			break;
		}
		sab = sab->next;
	}
	SABAOTHfreeStatus(&osab);
	if (ret != NULL)
		return(ret);

	/* part 3: "remote" -- ask merovingian over a UNIX socket, oops
	 *                     portability issues! */
#ifndef WIN32
	/* if Merovingian isn't running, there's not much we can do */
	if (mero_running == 1) do {
		char buf[256];
		int sock = -1;
		struct sockaddr_un server;
		char *p, *q;
		int len;
		int pos;

		snprintf(path, 8095, "%s/.merovingian_control", GDKgetenv("gdk_dbfarm"));
		path[8095] = '\0';

		if ((sock = socket(AF_UNIX, SOCK_STREAM, 0)) < 0)
			break;

		memset(&server, 0, sizeof(struct sockaddr_un));
		server.sun_family = AF_UNIX;
		strncpy(server.sun_path, path, sizeof(server.sun_path) - 1);
		if (connect(sock, (SOCKPTR) &server, sizeof(struct sockaddr_un)))
			break;

		/* Send the pass phrase to unlock the information available in
		 * merovingian.  Anelosimus eximius is a social species of spiders,
		 * which help each other, just like merovingians do among each
		 * other. */
		len = snprintf(buf, sizeof(buf), "anelosimus eximius\n");
		send(sock, buf, len, 0);
		pos = 0;
		len = 0;
		buf[len] = '\0';
		do {
			if ((p = strchr(buf, '\n')) == NULL) {
				if (len == sizeof(buf) - 1) {
					/* no newline in this block, too large, discard */
					pos = 0;
				} else {
					pos = len;
				}
				len = recv(sock, buf + pos, sizeof(buf) - 1 - pos, 0);
				/* if there is no more... */
				if (len <= 0)
					break;
				len += pos;
				buf[len] = '\0';
				continue;
			}
			*p++ = '\0';

			if ((q = strchr(buf, '\t')) == NULL) {
				/* doesn't look correct */
				len -= p - buf;
				memmove(buf, p, len + 1 /* include \0 */);
				continue;
			}
			*q++ = '\0';

			/* does it match? */
			if (strcmp(buf, dbname) == 0) {
				ret = GDKzalloc(sizeof(struct _userconn));
				ret->dbname = GDKstrdup(dbname);
				tmp = p;
				if (strncmp(tmp, "mapi:monetdb://", sizeof("mapi:monetdb://") - 1) == 0) {
					str port, t;
					tmp += sizeof("mapi:monetdb://") - 1;
					/* drop anything off after the hostname */
					if ((port = strchr(tmp, ':')) != NULL) {
						*port = '\0';
						port++;
						if ((t = strchr(port, '/')) != NULL)
							*t = '\0';
						ret->host = GDKstrdup(tmp);
						ret->port = atoi(port);
						break;
					}
				}
			}

			/* move it away */
			len -= p - buf;
			memmove(buf, p, len + 1 /* include \0 */);
		} while (1);

		close(sock);
	} while (0);
	if (ret != NULL)
		return(ret);
#endif

	return(NULL);
}

/* for unique connection identifiers */
static size_t connection_id = 0;

/**
 * Returns a connection to the given dbname.  It always returns a newly
 * created connection.
 */
static str RMTconnectInternal(
		str *ret,
		str *dbname,
		str *user,
		str *passwd,
		str *scen)
{
	connection c;
	userconn cdef;
	char conn[BUFSIZ];
	char *s;

	/* just make sure the return isn't garbage */
	*ret = 0;

	if (dbname == NULL || *dbname == NULL || strcmp(*dbname, (str)str_nil) == 0)
		throw(ILLARG, "remote.connect", ILLEGAL_ARGUMENT " Database name is NULL or nil");
	if (user == NULL || *user == NULL || strcmp(*user, (str)str_nil) == 0)
		throw(ILLARG, "remote.connect", ILLEGAL_ARGUMENT " Username is NULL or nil");
	if (passwd == NULL || *passwd == NULL || strcmp(*passwd, (str)str_nil) == 0)
		throw(ILLARG, "remote.connect", ILLEGAL_ARGUMENT " Password is NULL or nil");


	mal_set_lock(mal_remoteLock, "remote.connect");
	/* check if we know the dbname connection */
	cdef = RMTgetConnDefinition(*dbname); /* needs lock! */
	if (cdef == NULL) {
		mal_unset_lock(mal_remoteLock, "remote.connect");
		throw(MAL, "remote.connect", OPERATION_FAILED
			": unknown or unavailable connection: '%s'", *dbname);
	} 
	/* generate an unique connection name, they are only known
	 * within one mserver, id is primary key, the rest is super key */
	snprintf(conn, BUFSIZ, "%s_%s_" SZFMT, *dbname, *user, connection_id++);
	/* make sure we can construct MAL identifiers using conn */
	for (s = conn; *s != '\0'; s++) {
		if (!isalpha((int)*s) && !isdigit((int)*s)) {
			*s = '_';
		}
	}

	/* prepend the connection to the client list of known ones */
	c = GDKzalloc(sizeof(struct _connection));
	c->next = conns;
	conns = c;

	MT_lock_init(&c->lock, "remote connection lock");
	/* no need to lock c->lock, since noone can have c (as conns is
	 * locked */

	c->name = GDKstrdup(conn);
	c->nextid = 0;
	c->mconn = mapi_mapi(cdef->host, cdef->port, *user, *passwd, *scen,
			(strcmp(*dbname, (str)str_nil) == 0 ? NULL : *dbname));

	GDKfree(cdef->dbname);
	GDKfree(cdef->host);
	GDKfree(cdef);

	if (mapi_reconnect(c->mconn) != MOK) {
		char *err = mapi_error_str(c->mconn);

		/* throw away connection? */
		conns = c->next;
		MT_lock_destroy(&c->lock);
		GDKfree(c->name);
		GDKfree(c);

		mal_unset_lock(mal_remoteLock, "remote.connect");
		throw(IO, "remote.connect", OPERATION_FAILED ": cannot connect "
				"connection '%s': %s",
				conn, err);
	}

#ifdef _DEBUG_MAPI_
	mapi_trace(c->mconn, TRUE);
#endif

	mal_unset_lock(mal_remoteLock, "remote.connect");

	*ret = GDKstrdup(conn);
	return(MAL_SUCCEED);
}

