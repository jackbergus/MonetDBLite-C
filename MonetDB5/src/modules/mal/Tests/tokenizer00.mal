#basic test for the tokenizer module
include tokenizer;

tokenizer.open("test");

tokenizer.tokenize("http://www.cwi.nl");
tokenizer.tokenize("http://www.cwi.nl/");
tokenizer.tokenize("http://www.cwi.nl/~lsidir");
tokenizer.tokenize("http://www.cwi.nl/~mk");
tokenizer.tokenize("http://www.cwi.nl/~mk");
tokenizer.tokenize("http://www.ics.forth.gr");
tokenizer.tokenize("http://www.ics.forth.gr/");
tokenizer.tokenize("http://www.ics.forth.gr/~lsidir");
tokenizer.tokenize("http://www.cook.gr/");
tokenizer.tokenize("http://www.cook.gr/~lsidir");
tokenizer.tokenize("http://www.cook.gr/~mk");
tokenizer.tokenize("http://www.nocook.nl/~mk");
tokenizer.tokenize("http://www.nocook.nl/");
tokenizer.tokenize("ftp://thepiratebay.org");

id := 4:oid;
t  := tokenizer.take(id);
io.print(t);
id := tokenizer.locate(t);
io.print(id);

d:bat[:void,:bte] := tokenizer.getDepth();
io.print(d);
h:bat[:void,:oid] := tokenizer.getHeight();
io.print(h);

level0:bat[:oid,:str] := tokenizer.getLevel(0);
level1:bat[:oid,:str] := tokenizer.getLevel(1);
level2:bat[:oid,:str] := tokenizer.getLevel(2);
level3:bat[:oid,:str] := tokenizer.getLevel(3);
io.print(level0);
io.print(level1);
io.print(level2);
io.print(level3);

cnt:bat[:oid,:wrd] := tokenizer.getCount();
io.print(cnt);
cnt := tokenizer.getCardinality();
io.print(cnt);

tokenizer.close();
