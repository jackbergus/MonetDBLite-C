# for testweb, we need to ask the server itself how it is available, use
# sabaoth for that
include sabaoth;

h := sabaoth.getLocalConnectionHost();
p := sabaoth.getLocalConnectionPort();

# create a connecton to ourself
remote.create("test", h, p, nil:str, "monetdb", "monetdb");

a:str := "Fabian!";
b:flt := 4.3;
c:int := 12;
d:bat[:str,:int] := bat.new(:str, :int);
bat.insert(d, "bla", 1);
bat.insert(d, nil:str, 2);
bat.insert(d, "boe", nil:int);

# store the values
i:rmtobj := remote.put("test", a);
j:rmtobj := remote.put("test", b);
k:rmtobj := remote.put("test", c);
l:rmtobj := remote.put("test", d);

# retrieve the value
r:str := remote.get("test", i);
s:flt := remote.get("test", j);
t:int := remote.get("test", k);
u:bat[:str,:int] := remote.get("test", l);

# see if it really is here
io.print(r);
io.print(s);
io.print(t);
io.print(u);

# help testweb a bit, since currently no cleanup is done on server
# shutdown
remote.destroy("test");
