@c
#include <mal.h>
#include <mal_exception.h>
#include <mal_sabaoth.h>	/* for the implementation of the functions */
#include "sabaoth.h"

str SABAOTHprelude(int *ret) {
	(void)ret;

	return(MAL_SUCCEED);
}

str SABAOTHepilogue(int *ret) {
	(void)ret;

	return(SABAOTHwildRetreat(ret));
}
