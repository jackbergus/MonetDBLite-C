	-I../atoms -I../../mal \
	$(MONETDB_INCS) $(HWCOUNTERS_INCS) \
	$(SPHINXCLIENT_CFLAGS) $(ICONV_CFLAGS)

MTSAFE

LIBS = {
	DIR = libdir/MonetDB5
	SEP = _
	SOURCES = \
		calc.mx bat5.mx algebra.mx status.mx unix.mx \
		mmath.mx lock.mx sema.mx alarm.mx  batifthen.mx \
		batcast.mx batcalc.mx batmmath.mx counters.mx \
		microbenchmark.mx 

	#SCRIPTS = mal mil ""
	LIBS = $(MONETDB_LIBS) -lbat -lstream $(MATH_LIBS) \
                $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
                $(MALLOC_LIBS) $(PTHREAD_LIBS) $(DL_LIBS) ../../mal/libmonetdb5
}

