			if (!(bn->batDirty&2)) bn = BATsetaccess(bn, BAT_READ);
			*result = bn->batCacheid;
			BBPkeepref(*result);
			return MAL_SUCCEED;
		}
		throw(MAL, "algebra.thsort", "GDKerror: ssort failed");
	}
	throw(MAL, "algebra.thsort", "GDKerror: tsort failed");
}

