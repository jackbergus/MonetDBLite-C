str
doALGfetch(ptr ret, BAT *b, lng *pos)
{
	lng i = *pos;
	BAT *bn;
	int *res;
	BATiter bi = bat_iterator(b);

	if ((i < 0) || (i >= (lng) BATcount(b)))
		throw(MAL, "algebra.fetch", " idx out of range\n");
	i += BUNfirst(b);
	
	assert(i <= (lng) BUN_MAX);
	if( b->ttype== TYPE_bat){
		res= (int*) ret;
		ret= &bn;
		@:putTail((BUN)i)@
		if( bn)
			BBPkeepref(*res = bn->batCacheid);
		else *res = 0;
	} else {
		@:putTail((BUN)i)@
	}
	return MAL_SUCCEED;
}

