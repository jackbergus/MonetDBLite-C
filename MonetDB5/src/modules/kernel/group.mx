static BAT *
map2histo(BAT *map)
{
	BUN p, q;
	BAT *bn;
	BUN sz;

	if (map == NULL || map->htype != TYPE_mapentry || isVIEW(map) || map->batSharecnt > 1 || BATgetaccess(map) != BAT_WRITE) {
		if (map)
			BBPreclaim(map);
		return NULL;
	}
	sz = BATcount(map);
	bn = BATnew(TYPE_oid,TYPE_wrd,sz);
	if ( bn == NULL){
		if (map)
			BBPreclaim(map);
		return NULL;
	}
	BATloop(map, p, q) {
		bunfastins(bn, 
			&((mapentry_t*)Hloc(map, p))->use.gid, 
			&((mapentry_t*)Hloc(map, p))->use.cnt);
	}
	BATkey(BATmirror(bn),FALSE);
	bn->tsorted = 0;
bunins_failed:
	if (map)
		BBPreclaim(map);
	return bn;
}
