	if ((dom = BATdescriptor(*domid)) == NULL) {
		BBPreleaseref(sel->batCacheid);
		BBPreleaseref(grp->batCacheid);
		throw(MAL, "group.subhisto", RUNTIME_OBJECT_MISSING);
