	CTsubhisto(&bn, sel, grp, dom);
	*retid = bn->batCacheid;
	BBPkeepref(*retid);
	BBPreleaseref(sel->batCacheid);
	BBPreleaseref(grp->batCacheid);
	BBPreleaseref(dom->batCacheid);
