@f xqry_backend
@t XQuery backend structure
@a N. Nes, M.L. Kersten
@+ XQUERY backend

@h
#ifndef _XQUERY_BACKEND_H_
#define _XQUERY_BACKEND_H_

#include "xqry.h"
#include "xqry_scanner.h"

typedef struct {
    Xvariable vars[MAXXVARS];
    short vtop;
    int scopes[MAXSCOPES];  /* keep track of the depth */
    int stop;
    int mode;
    MalBlkPtr mb;
    xscanner *xs;
    int	      token;	/* current to be parsed token */
    char     *sval;	/* string of current token */
    char     *path;	/* current path */
} *Xbackend, XbackendRec;

xqry_export Xbackend newXbackend(Client c);

#define _XQRY_BACKEND_DEBUG   1 /* trace it use */

#endif /* _XQUERY_BACKEND_H_ */
@c
@+
The backend structure contains the state description
for the code generator.
@c

#include "xqry_backend.h"

Xbackend
newXbackend(Client c)
{
	Xbackend xb;
#ifdef _XQRY_BACKEND_DEBUG
	stream_printf(GDKout,"#DEBUG newXbackend\n");
#endif
	xb = (Xbackend) GDKmalloc( sizeof(XbackendRec));
	memset((char*) xb, 0, sizeof(XbackendRec));
	xb->mb = c->curprg->def;
	xb->mode = xqry_explain; /* until we have a runtime library */
	xb->xs = xscanner_new(c);
	return xb;
}

