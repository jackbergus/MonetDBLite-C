STATIC int
parseCompTextConstructor(Client cntxt, Xbackend xb){
	int before = cntxt->yycur;
	if( !MALkeyword(cntxt,"text",4) )
		return PARSE_ERR;
	@:ptrace(parseCompTextConstructor)@
	skipSpace(cntxt);
	if( currChar(cntxt) != '{') {
		cntxt->yycur = before; /* HACK */
		return PARSE_ERR;
	}
	nextChar(cntxt);
	parseExpr(cntxt,xb);
	skipSpace(cntxt);
	if( currChar(cntxt) != '}')
		return xqryError(cntxt,"'}' expected\n");
	nextChar(cntxt);
	return PARSE_OK;
}

STATIC int
parseCompAttrConstructor(Client cntxt, Xbackend xb){
	int i;
	if( !MALkeyword(cntxt,"attribute",9))
		return PARSE_ERR;
	@:ptrace(parseCompAttrConstructor)@
	if ( (i=parseQName(cntxt,xb)) > 0) {
		skipSpace(cntxt);
	} else{
		if( currChar(cntxt) != '{')
			return xqryError(cntxt,"'{' expected\n");
		nextChar(cntxt);
		parseExpr(cntxt,xb);
		skipSpace(cntxt);
		if( currChar(cntxt) != '}')
			return xqryError(cntxt,"'}' expected\n");
		nextChar(cntxt);
	}

	if( currChar(cntxt) != '{')
		return xqryError(cntxt,"'{' expected\n");
	nextChar(cntxt);
	parseExpr(cntxt,xb);
	skipSpace(cntxt);
	if( currChar(cntxt) != '}')
		return xqryError(cntxt,"'}' expected\n");
	nextChar(cntxt);
	return PARSE_OK;
}

STATIC int
parseCompElemConstructor(Client cntxt, Xbackend xb){
	int i;
	if( !MALkeyword(cntxt,"element",7))
		return PARSE_ERR;
	@:ptrace(parseCompElemConstructor)@
	if ( (i=parseQName(cntxt,xb)) <= 0) {
		if( currChar(cntxt) != '{')
			return xqryError(cntxt,"'{' expected\n");
		nextChar(cntxt);
		parseExpr(cntxt,xb);
		skipSpace(cntxt);
		if( currChar(cntxt) != '}')
			return xqryError(cntxt,"'}' expected\n");
		nextChar(cntxt);
	}
	skipSpace(cntxt);

	if( currChar(cntxt) != '{')
		return xqryError(cntxt,"'{' expected\n");
	nextChar(cntxt);
	parseExpr(cntxt,xb);
	skipSpace(cntxt);
	if( currChar(cntxt) != '}')
		return xqryError(cntxt,"'}' expected\n");
	nextChar(cntxt);
	return PARSE_OK;
}

