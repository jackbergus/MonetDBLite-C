	parseVarName(cntxt, xb);
	return PARSE_OK;
}

int parseVarName(Client cntxt, Xbackend xb) {
	skipSpace(cntxt);
	if (currChar(cntxt) != '$')
		return PARSE_ERR;
	@:ptrace(parseVarName)@
	nextChar(cntxt);
	skipSpace(cntxt);
	if (parseVarQName(cntxt, xb) == PARSE_ERR)
		return xqryError(cntxt,"<QName> expected\n");
	/* has optional type? */

#ifdef _XQRY_DEBUG
	stream_printf(cntxt->fdout, "parseVarName %s\n",
		      xb->vars[xb->vtop - 1].nme);
#endif
	return PARSE_OK;
}

STATIC int parsePragma(Client cntxt, Xbackend xb) {
	int i;
	(void) xb;
	if (!keyphrase2(cntxt, "(#"))
		return PARSE_ERR;
	@:ptrace(parsePragma)@
	if ( (i=parseQName(cntxt,xb)) <= 0) 
		return xqryError(cntxt,"<QName> expected\n");
	i = 0;
	do {
		if (currChar(cntxt) == ')' && i)
			break;
		if (currChar(cntxt) == '#')
			i++;
		else
			i = 0;
		nextChar(cntxt);
	} while (currChar(cntxt));
	return PARSE_OK;
}

STATIC int parseExtensionExpr(Client cntxt, Xbackend xb) {
	@:ptrace(parseExtensionExpr)@
	do {
		skipSpace(cntxt);
	} while (parsePragma(cntxt, xb) == PARSE_OK);
	if (currChar(cntxt) != '(')
		return xqryError(cntxt,"'(' expected\n");
	nextChar(cntxt);
	skipSpace(cntxt);
	parseExpr(cntxt, xb);
	if (currChar(cntxt) != ')')
		return xqryError(cntxt,"')' expected\n");
	nextChar(cntxt);
	return PARSE_OK;
}

