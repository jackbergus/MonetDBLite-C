# the chunk mechanism

S:= bat.new(:oid,:str);
bat.append(S,"hello");
bat.append(S,"brave");
bat.append(S,"new");
bat.append(S,"world");
io.print(S);

L:= batcalc.length(S);
io.print(L);
L:= batcalc.bytes(S);
io.print(L);

B:= batcalc.==(S,"hello");
io.print(B);

B:= batcalc.match(S,"hello");
io.print(B);

U:= batcalc.toUpper(S);
io.print(U);

l:= batcalc.toLower(U);
io.print(l);

trim:= batcalc.trim(S); 
io.print(trim);
ltrim:= batcalc.ltrim(S); 
io.print(ltrim);
rtrim:= batcalc.rtrim(S); 
io.print(rtrim);

io.print("Start searches");
srch:= batcalc.search(S,"hello"); 
io.print(srch);
srch:= batcalc.search(S,S); 
io.print(srch);
plus:= batcalc.+(S,S); 
io.print(plus);
