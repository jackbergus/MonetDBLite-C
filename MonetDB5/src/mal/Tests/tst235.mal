# BAT references are seens as BAT's and should be subject to the
# same reference scheme.

function dir():void;
	d:= bbp.getRefCount();
	dl:=bbp.getLRefCount();
	dn:= bbp.getNames();
	ds:= algebra.sort(dn);
	io.table(ds,d,dl);
end dir;

function createBAT(name:str):bat;
    res:= bat.new(:int,:int);
    bat.setName(res,name);
    i:= calc.getBATidentifier(res);
	j:= i; # now res should have 3 lrefs
	dir();
    return i;
end createBAT;

