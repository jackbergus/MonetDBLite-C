{	
	@:safeTarget@
	for(k=0, i=pci->retc; k<pci->retc && i<pci->argc; i++,k++){
		lhs = &stk->stk[pci->argv[k]];
		rhs = &stk->stk[pci->argv[i]];
		VALcopy(lhs,rhs);
		if( lhs->vtype == TYPE_bat)
			BBPincref(lhs->val.bval, TRUE);
	}
	@:restoreTarget(@1)@
	ret = 0;
	@:exceptionHndlr(@1,@2,@3)@
	@:timingHndlr(@1)@
