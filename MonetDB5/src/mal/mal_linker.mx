@-
The mapping from MAL module.function() identifier to an address is
resolved in the function getAddress. Since all modules libraries are loaded
completely with GLOBAL visibility, it suffices to provide the internal function 
name.
In case an attempt to link to an address fails, 
a final attempt is made to locate the *.o file in
the current directory.

@{
Note, however, that the libraries are reference counted. Although we
do;t close them until end of session it seems prudent to maintain
the consistency of this counter.

@c
#include "mal_linker.h"
#include "mal_function.h"	/* for throwException() */
#include "mal_import.h"		/* for slash_2_dir_sep() */

static int noDlopen;
#define MAXMODULES 256

static str *moduleLoaded;
static str *moduleFiles;
static void **moduleHandle;
static int maxmodules = 0;
static int lastmodule = 0;

MALfcn
getLocalObjectFile(str fcnname)
{
	int mode = RTLD_NOW | RTLD_GLOBAL;
	void *handle = NULL;
	char *fullname;

	fullname = MSP_locate_module(fcnname);
	if (fullname == NULL) {
#ifdef DEBUG_MAL_LINKER
		stream_printf(GDKout,"Name not resolved %s\n",fcnname);
#endif
		return 0;
	}
#ifdef DEBUG_MAL_LINKER
	printf("attempt to load function %s from %s\n",fcnname, fullname);
#endif
	handle = dlopen(fullname, mode);
#ifdef DEBUG_MAL_LINKER
	stream_printf(GDKout, "localObjectLoaded ? %s\n",(handle!=0?"yes":"no"));
#endif
	if (handle) {
		return (MALfcn) dlsym(handle, fcnname);
	}
	stream_printf(GDKout, "could not access library %s\n", dlerror());
	return 0;
}

MALfcn
getAddress(str modnme, str fcnname, int silent)
{
	void *dl = 0;
	MALfcn adr;
	int idx;
	char *errmsg;

#ifdef DEBUG_MAL_LINKER2
	stream_printf(GDKout, "addres of %s.%s ?\n",modnme,fcnname);
#endif
@-
First try the program at large.
@c
	dl = dlopen(NULL, RTLD_NOW | RTLD_GLOBAL);
	errmsg= dlerror();
	if( dl != NULL && errmsg == NULL){
		adr = (MALfcn) dlsym(dl, fcnname);
		errmsg= dlerror();
		if( errmsg== NULL && adr != NULL) return adr;
	}
@-
Try all modules for occurrence of the function
@c
	for(idx =0; idx < maxmodules && moduleLoaded[idx]; idx++){
		adr = (MALfcn) dlsym(moduleHandle[idx], fcnname);
		errmsg= dlerror();
		if( adr != NULL) return adr;
	}
@-
Try to load it as a separate object
@c	
	adr = getLocalObjectFile(fcnname);
	if (noDlopen && adr== 0 && silent == 0)
		GDKerror("address of '%s.%s' not found\n", (modnme?modnme:"<unknown>"), fcnname);
#ifdef DEBUG_MAL_LINKER2
	if (adr != NULL)
		stream_printf(GDKout, "addres of %s %d %s\n", fcnname, (int) adr, errmsg);
#endif
	return adr;
}

@}
@+ Module loading
The default location to search for the module is in monet_mod_path
unless an absolute path is given.

Loading further relies on the Linux policy to search for the module
location in the following order: 1) the colon-separated list of
directories in the user's LD_LIBRARY, 2) the libraries specified
in /etc/ld.so.cache, and 3) /usr/lib followed by /lib
If the module contains a routine _init, then that code is executed
before the loader returns. Likewise the routine _fini is called just
before the module is unloaded.

A module loading conflict emerges if a function is redefined.
A duplicate load is simply ignored by keeping track of modules
already loaded.
@{
@c

static void
initM5Loader()
{
	str *newModuleLoaded;
	str *newModuleFiles;
	void **newModuleHandle;
	int i, newsize = maxmodules + MAXMODULES;

	/* assume a safe call environment */
	if (moduleLoaded == NULL) {
		mal_set_lock(mal_contextLock, "loadModule");
		if (moduleLoaded == NULL) {
			maxmodules = MAXMODULES;
			moduleLoaded = (str *) GDKmalloc(maxmodules * sizeof(str));
			memset((char*) moduleLoaded, 0, maxmodules * sizeof(str));
			moduleFiles = (str *) GDKmalloc(maxmodules * sizeof(str));
			memset((char*) moduleFiles, 0, maxmodules * sizeof(str));
			moduleHandle = (void **) GDKmalloc(maxmodules * sizeof(void *));
			memset((char*) moduleHandle, 0, maxmodules * sizeof(void *));
			lastmodule = 0;
		}
		mal_unset_lock(mal_contextLock, "loadModule");
	} else if (lastmodule + 2 == maxmodules) {
		/* guarantee at least one free slot */
		mal_set_lock(mal_contextLock, "loadModule");
		newModuleLoaded = (str *) GDKmalloc(newsize * sizeof(str));
		newModuleFiles = (str *) GDKmalloc(newsize * sizeof(str));
		newModuleHandle = (void **) GDKmalloc(newsize * sizeof(void *));
		memset((char *) newModuleLoaded, 0, newsize * sizeof(str));
		memset((char *) newModuleFiles, 0, newsize * sizeof(str));
		memcpy((char *) newModuleLoaded, (char *) moduleLoaded, maxmodules * sizeof(str *));
		memcpy((char *) newModuleFiles, (char *) moduleFiles, maxmodules * sizeof(str));
		memcpy((char *) newModuleHandle, (char *) moduleHandle, maxmodules * sizeof(void **));
		GDKfree(moduleLoaded);
		GDKfree(moduleFiles);
		GDKfree(moduleHandle);
		moduleLoaded = newModuleLoaded;
		moduleFiles = newModuleFiles;
		moduleHandle = newModuleHandle;
		for (i = maxmodules; i < newsize; i++) {
			moduleLoaded[i] = NULL;
			moduleFiles[i] = NULL;
			moduleHandle[i] = NULL;
		}
		maxmodules = newsize;
		mal_unset_lock(mal_contextLock, "loadModule");
	}
}

int
isLoaded(str modulename)
{
	int idx;

	for (idx = 0; moduleLoaded[idx] && idx < maxmodules; idx++)
		if (strcmp(moduleLoaded[idx], modulename) == 0) {
			return 1;
		}
	return 0;
}

#ifndef MAXPATHLEN
#define MAXPATHLEN 1024
#endif
str
loadModuleLibrary(str modulename)
{
	int mode = RTLD_NOW | RTLD_GLOBAL;
	char nme[MAXPATHLEN];
	char errbuf[1024];
	void *handle = NULL;
	str fullname, s;
	int idx;
	char *errmsg;

	initM5Loader();
	for (idx = 0; moduleLoaded[idx] && idx < maxmodules; idx++)
		if (strcmp(moduleLoaded[idx], modulename) == 0) {
#ifdef DEBUG_MAL_LINKER
			stream_printf(GDKout, "already load:%s:%s\n", modulename, handle == NULL ? (handle == NULL ? errbuf : "failed") : "succeeded");
			return (str) throwException("loaderException", "Module loaded twice", modulename);
#endif
			return MAL_SUCCEED;
		}
@-
Use the search path provided in the configuration file
@c
	s = strrchr(modulename, DIR_SEP);
	snprintf(nme, MAXPATHLEN, "_%s", s ? s + 1 : modulename);
	fullname = MSP_locate_module(nme);

/* AIX requires RTLD_MEMBER to load a module that is a member of an archive.  */
#ifdef RTLD_MEMBER
	mode |= RTLD_MEMBER;
#endif
	if (fullname) {
		handle = dlopen(fullname, mode);
#ifdef DEBUG_MAL_LINKER2
		stream_printf(GDKout, "load[%d]:%s %s:%s\n", lastmodule, modulename, fullname, 
			handle == NULL? (handle == NULL ? errbuf : "failed") : "succeeded");
#endif
		if ( handle == NULL && (errmsg= dlerror()) ) {
			snprintf(errbuf, 1024, "%s: loader error %s", modulename, errmsg);
			GDKfree(fullname);
			return (str) throwException("loaderException", 
						"loadModuleLibrary", errbuf);
		}
	} else {
		GDKerror("Failed to bind module '%s' to library\n", modulename);
		return (str) throwException("loaderException", 
						"loadModuleLibrary", modulename);
	}

	mal_set_lock(mal_contextLock, "loadModule");
	if (lastmodule  == maxmodules)
		GDKerror("loadModule:internal error, too many modules loaded\n");
	else {
		moduleLoaded[lastmodule ] = GDKstrdup(modulename);
		moduleFiles[lastmodule ] = fullname;
		moduleHandle[lastmodule ] = handle;
		lastmodule ++;
	}
	mal_unset_lock(mal_contextLock, "loadModule");
	return 0;
}

@-
For analysis of memory leaks we should cleanup the libraries before
we exit the server
@c
void
unloadModuleLibraries()
{
	int i;

	mal_set_lock(mal_contextLock, "loadModule");
	for (i = 0; i < maxmodules; i++)
		if (moduleHandle[i]) {
			dlclose(moduleHandle[i]);
			GDKfree(moduleLoaded[i]);
		}
	lastmodule = 0;
	mal_unset_lock(mal_contextLock, "loadModule");
}

@}
@- 
To speedup restart and to simplify debugging, the Monet server can
be statically linked with some (or all) of the modules. 
A complicating factor is then to avoid users to initiate another load
of the module file, because it would lead to a dlopen error.

The partial way out of this dilema is to administer somewhere
the statically bound modules, or to enforce that each module
comes with a known routine for which we can search.
In the current version we use the former approach.
@{
The routine below turns off dynamic loading while parsing the
command signature files.
@c
static str preloaded[] = {
	"kernel/bat",
	0
};

int
isPreloaded(str nme)
{
	int i;

#ifdef DEBUG_MAL_LINKER
	stream_printf(GDKout, "load:%s:preloaded?\n", nme);
#endif
	for (i = 0; preloaded[i]; i++)
		if (strcmp(preloaded[i], nme) == 0)
			return 1;
	return 0;
}

void
initLibraries()
{
	noDlopen = TRUE;
