lng savedTime = 0;	/* sum of all recycled clk's */
int monitorRecycler = 0; /* 1: print cache stat after each RECYCLEnew call */
			 /* 2: print cache stat at the end of query */
int recycleRecent;     /* the most recent entry in cache touched by current query execution */

@-
The Recycle catalog is a global structure, which should be
protected with locks when updated.
The recycle statistics can be kept in the performance table
associated with the recycle MAL block without problems, because 
the block is never executed.
@c
static void RECYCLEspace()
{
	if (recycleBlk == NULL) {
		/* parallel threads ? */
		if (recycleBlk == NULL) {
			recycleBlk = newMalBlk(MAXVARS, STMT_INCREMENT);
			recycleBlk->profiler = (ProfPtr) GDKzalloc(
				recycleBlk->ssize*sizeof(ProfRecord));
		}
	}
}

void RECYCLEinit(void){
	MT_init_lock(recycleLock,"recycleLock");
}

void RECYCLEversion(Client cntxt, MalBlkPtr mb)
{
	int i;

	if ( mb->version && mb->version != recycleVersion) { 
		/* all re-used instructions are dropped */
#ifdef _DEBUG_RECYCLE_
	stream_printf(cntxt->fdout,"RECYCLE get version %d\n", recycleVersion);
#else
	(void) cntxt;
#endif
		for(i=1; i<mb->stop; i++)
			if (getInstrPtr(mb,i)->recycle)
				getInstrPtr(mb,i)->recycle = -1;
	}	
	mb->version = recycleVersion;
}
@-
The cache of recycled instructions can be kept low.
Once the cache is filled, we have to drop instructions
and associated variables. At the same time we should
invalidate the cache version, such that others can
re-synchronize.

For the recycle cache LRU scheme we mis-use a field in
the performance record.

Removal of instructions should be done with care.
First, there may be references kept around to 
variables in the recycle cache. They should be
invalidated.
Second, for each (BAT) variable removed, we
should also remove the dependent instructions.
@c
static void
RECYCLEgarbagecollect(MalBlkPtr mb, InstrPtr q){
	int j;
	ValPtr v;

	for(j=0; j< q->argc; j++){
		v= &getVarConstant(mb,getArg(q,j));
		if(getArgType(mb,q,j)==TYPE_bat || isaBatType(getArgType(mb, q,j)) ){
			if( v->val.bval ){
				BBPdecref(ABS(v->val.bval), TRUE);
				if (!BBP_lrefs(v->val.bval)){ 
					v->vtype= TYPE_int;
					v->val.ival= 0; 
				}
			}
		}
		if( v->vtype == TYPE_str) {
			if(v->val.pval) {
				GDKfree(v->val.pval);
				v->val.pval = NULL;
			}
			v->len = 0;
		}
	}
}

@-
static void RECYCLEremove(int pc){
	int k,j,i,v;
	InstrPtr p;
	InstrPtr *old;
	int limit;
	char *used;

	old = recycleBlk->stmt;
	limit = recycleBlk->stop;
	newMalBlkStmt(recycleBlk,recycleBlk->ssize);

	used= alloca(recycleBlk->vtop);
	memset(used,0, recycleBlk->vtop);

	/* set all used variables */
	for (i = 0; i < pc; i++){
		p= old[i];
		pushInstruction(recycleBlk,p);
		for( j = 0 ; j< p->argc; j++)
			used[getArg(p,j)] = 1;
	}

	/* ditch the selected one */
#ifdef _DEBUG_RECYCLE_
	stream_printf(cntxt->fdout,"RECYCLEremove %d ",i);
	printInstruction(cntxt->fdout,recycleBlk, old[i], LIST_MAL_ALL);
#endif
	RECYCLEgarbagecollect(recycleBlk,old[i]);
	for (v=0; v< old[i]->retc; v++)
			used[getArg(old[i],v)] = 0; /* invalidate return variables */
	freeInstruction(old[i]);
	k= i;

	/* propagate the droppings, in the current setup this is not needed
	  because all instructions are independently cached */
	for (i ++; i < limit; i++){
		p= old[i];
		for( j = p->retc; j< p->argc; j++)
		if( used[getArg(p,j)] ==0){
			RECYCLEgarbagecollect(recycleBlk,old[i]);
			for (v=0; v< old[i]->retc; v++)
					used[getArg(p,v)] = 0; /* invalidate return variables */
			freeInstruction(old[i]);
			goto skip;
		}
		pushInstruction(recycleBlk,p);
		recycleBlk->profiler[k++]= recycleBlk->profiler[i];
		/* the instruction args are safed */
		for( j = 0 ; j< p->retc; j++)
			used[getArg(p,j)] = 1;
	skip:;
	}
	GDKfree(old);
	/* remove all un-used variables as well */
	trimMalVariables(recycleBlk);
}

static lng lruclock=0;

/* evict entry from recycler cache to make space for wr RUnits. Target
entry is protected from eviction */

static void 
RECYCLEcache(int target, int wr)
{
	int i, victim = 0, mem, size;

	if (!recycleBlk) 
		return;
	mem = (recycleMemory && recyclerUsedMemory + wr > recycleMemory);
	size = (recycleCacheLimit && recycleBlk->stop + (target>0) > recycleCacheLimit);
	if (!mem && !size)
		return;

	if (target>=0) {
		recycleBlk->profiler[target].clk= ++lruclock; /* most recently used */
		return;
	}

	for(i=1; i< recycleBlk->stop; i++)
	if (i != target){
		switch(rcachePolicy){
		case RCACHE_LRU:
			/* find oldest instruction */
			if( recycleBlk->profiler[victim].clk >recycleBlk->profiler[i].clk)
				victim = i;
			break;
		case RCACHE_CREDIT:
			/* find least expensive instruction to reconstruct */
			if (recycleBlk->profiler[victim].counter * recycleCost(victim) > recycleBlk->profiler[i].counter * recycleCost(i))
					victim = i;
			break;
		case RCACHE_MEMLRU:
			if (mem && recycleBlk->profiler[victim].clk >recycleBlk->profiler[i].clk)
				victim = i;
			break;
		case RCACHE_MEMCRD:
			if(mem && recycleBlk->profiler[victim].counter * recycleCost(victim) > recycleBlk->profiler[i].counter * recycleCost(i) )
				victim = i;
		}
	}

	if (victim!= target && (mem || (size && recycleClaim <= 1)) ){
#ifdef _DEBUG_RECYCLE_
		stream_printf(cntxt->fdout,"RECYCLE cache, remove %d \n",victim);
#endif
		recyclerUsedMemory -= recycleBlk->profiler[victim].obytes;
		RECYCLEremove(victim);
		if (monitorRecycler == 1)
			fprintf(stderr, 
				"#memory=%lld, stop=%d, recycled=%d, retained=%d executed=%d saved=%d\n",
				recyclerUsedMemory, recycleBlk->stop,
				recycled, retained, statements, savedTime);
#ifdef _DEBUG_RECYCLE_
	stream_printf(cntxt->fdout,"RECYCLE new version %d\n", recycleVersion);
#endif
		recycleVersion++;
	}
}

@c

int chooseVictims(lng *lvs, int ltop, lng wr)
{
	dbl *wcrd, maxwc, tmp;
	int l, newtop, mpos;
	lng w, tmpl, totmem = 0, targmem, smem;

	wcrd = (dbl *)alloca(sizeof(dbl)*ltop);
	memset(wcrd,0, sizeof(dbl)*ltop);
	for (l = 0; l < ltop; l++){
		w = recycleBlk->profiler[lvs[l]].obytes;
		wcrd[l] = w? recycleCost(lvs[l])* recycleBlk->profiler[lvs[l]].counter/ w :0;
		totmem +=w;
	} 
	if (totmem <= wr) /* all leaves need to be dropped */
		return ltop;

	/* reorder instructions on increasing weighted credit */
	/* knapsack: find a set with biggest wcrd fitting in totmem-wr.
	 They are most benefitial and can be saved from dropping */ 

	targmem = totmem - wr; /*sack volume */
	smem = 0;
	for(newtop =ltop; newtop>0; newtop--){
		maxwc = 0; mpos = newtop-1;
		for(l = 0; l<newtop; l++){
				if ((lng) recycleBlk->profiler[lvs[l]].obytes > targmem - smem)
				wcrd[l] = -1;
			if (maxwc <= wcrd[l]){
				maxwc = wcrd[l];
				mpos = l;
			}
		}
		if ( maxwc ){
			smem += recycleBlk->profiler[lvs[mpos]].obytes;
			tmpl = lvs[mpos];
			lvs[mpos] = lvs[newtop-1];
			lvs[newtop-1] = tmpl;
			tmp = wcrd[mpos];
			wcrd[mpos] = wcrd[newtop-1];
			wcrd[newtop-1] = tmp;
		}
		else break;
	}
	return newtop;

}


static void RECYCLEcleanCache(lng wr){
	int j,i,l,ltop,v,vtop;
	InstrPtr p;
	InstrPtr *old;
	char *used, *dmask;
	lng k, *lvs, *vm, *lvs1;
	int limit, mem, oldest, cheap;
	int cont, reserve;
	lng oldclk, newclk;
	dbl mincrd, crd;
	lng memLimit = recycleMemory?recycleMemory:HARDLIMIT_MEM;
#ifdef _DEBUG_CACHE_
	Client cntxt= MCgetClient();
#endif

	if (!recycleBlk) 
		return;

newpass:
	cont = 0;	
	used = alloca(recycleBlk->vtop);
	memset(used,0, recycleBlk->vtop);

	lvs = (lng *)alloca(sizeof(lng)*recycleBlk->stop);
	memset(lvs,0, sizeof(lng)*recycleBlk->stop);

	/* set all used variables */
	for (i = 0; i < recycleBlk->stop; i++){
		p = recycleBlk->stmt[i];
		for( j = p->retc ; j< p->argc; j++)
			used[getArg(p,j)]++;
	}

	/* find the leaves, ignore the most recent instruction */

	ltop = 0; reserve = 0;
	for (i = 1; i < recycleBlk->stop; i++){
		p = recycleBlk->stmt[i];
		for( j = 0; j < p->retc ; j++)
			if (used[getArg(p,j)]) goto skip;
		if (i == recycleRecent){
			reserve = i;
			continue;
		}
		lvs[ltop++] = i;
		skip:;
	}

	/* find the victims */
	if (ltop == 0 ){
		if (reserve)
			lvs[ltop++] = reserve;
		else return;
	}
	mem = recyclerUsedMemory + wr > memLimit;
	vm = (lng *)alloca(sizeof(lng)*ltop);
	memset(vm,0, sizeof(lng)*ltop);
	vtop = 0;
	newclk = oldclk = recycleBlk->profiler[lvs[0]].clk;
	oldest = 0;
	for (l = 0; l < ltop; l++){
		k = lvs[l];
		if( recycleBlk->profiler[k].clk > newclk) 
			newclk = recycleBlk->profiler[k].clk;
		if( recycleBlk->profiler[k].clk < oldclk){ 
			oldclk = recycleBlk->profiler[k].clk;
			oldest = l;
		}
	}
	switch(rcachePolicy){
		case RCACHE_LRU:
			if (!mem) /* evict 1 entry */
				vm[vtop++] = lvs[oldest];
			else{	  /* evict several to get enough mem */
				vm[vtop++] = lvs[oldest];
				wr -= recycleBlk->profiler[lvs[oldest]].obytes;
				lvs[oldest] = lvs[--ltop];
				while( ltop>0 && recyclerUsedMemory + wr > memLimit){
					oldest = 0;
					oldclk = recycleBlk->profiler[lvs[0]].clk;
					for (l = 0; l < ltop; l++){
						k = lvs[l];
						if( recycleBlk->profiler[k].clk < oldclk){ 
							oldclk = recycleBlk->profiler[k].clk;
							oldest = l;
						}
					}
					vm[vtop++] = lvs[oldest];
					wr -= recycleBlk->profiler[lvs[oldest]].obytes;
					lvs[oldest] = lvs[--ltop];
				}
			}
			break;

		case RCACHE_CREDIT:
			newclk = (lng)((1-recycleFresh)*oldclk + recycleFresh*newclk);
			lvs1 = lvs;  	/* drop newest to avoid deletion */
			assert(ltop > 0);
			lvs = (lng *)alloca(sizeof(lng)*ltop);
			for(j = 0; j < ltop; j++)
				lvs[j] = 0;
			l = 0;
			for (j = 0; j < ltop; j++){
				k = lvs1[j];
				if (( recycleBlk->profiler[k].counter == 1) &&
					recycleBlk->profiler[k].clk > newclk) 
					continue; 
				lvs[l++] = lvs1[j];
			}
			if (l) ltop = l;
			else lvs = lvs1; 

			if (!mem) { /* evict the cheapest entry */
				mincrd = recycleBlk->profiler[lvs[0]].counter *
					  recycleCost(lvs[0]);
				cheap = 0;
				for (l = 0; l < ltop; l++){
					k = lvs[l];
					crd = recycleBlk->profiler[k].counter * recycleCost(k);
					if( crd < mincrd) {
						mincrd = crd;
						cheap = l;
					}
				}
				vm[vtop++] = lvs[cheap];
			}
			else {	  /* evict several to get enough mem */
				vtop = chooseVictims(lvs, ltop, wr);
				for (v = 0; v < vtop; v++){
					vm[v] = lvs[v];
					wr -= recycleBlk->profiler[lvs[v]].obytes;
				}
			}
			break;
	}

	/* check if a new pass of cache cleaning is needed */
	if (recyclerUsedMemory + wr > memLimit)
		cont = 1;

#ifdef _DEBUG_CACHE_
	stream_printf(cntxt->fdout,"RECYCLEcleanCache: candidates for eviction \n ");
	for (l = 0; l < ltop; l++)
		stream_printf(cntxt->fdout,"%3d ",lvs[l]);
	stream_printf(cntxt->fdout,"\nEvicted %d instruction(s) \n ",vtop);
	for(v=0; v<vtop;v++){
		printInstruction(cntxt->fdout,recycleBlk, recycleBlk->stmt[vm[v]], LIST_MAL_ALL);
		stream_printf(cntxt->fdout," Cost %f \n", recycleCost(vm[v]));}
	stream_printf(cntxt->fdout,"policy=%d mem=%ld usedmem=%ld\n",
		rcachePolicy,recycleMemory,recyclerUsedMemory);
#endif


	/* drop wictims in one pass */

	dmask = alloca(recycleBlk->stop);
	memset(dmask,0,recycleBlk->stop);
	for (v = 0; v < vtop; v++)
		dmask[vm[v]] = 1;

	old = recycleBlk->stmt;
	limit = recycleBlk->stop;
	newMalBlkStmt(recycleBlk,recycleBlk->ssize);

	k = 0;
	for (i = 0; i < limit ; i++){
		p = old[i];
		if( dmask[i] ) {
			RECYCLEgarbagecollect(recycleBlk,p);
			recyclerUsedMemory -= recycleBlk->profiler[i].obytes;
			freeInstruction(p);
		}
		else {
			pushInstruction(recycleBlk,p);
			recycleBlk->profiler[k++]= recycleBlk->profiler[i];
		}
	}

	GDKfree(old);
	/* remove all un-used variables as well */
	trimMalVariables(recycleBlk);
	recycleVersion++;
	if (cont) goto newpass;
}

@-
To avoid a polution of the recycle cache, we do not store any
intruction for which there is not function/command/pattern implementation.
Likewise, we avoid all simple constant assigments.
@c
int
RECYCLEinterest(MalBlkPtr mb, InstrPtr p){
	(void) mb;
	if (p->recycle == 0 || p->token== ASSIGNsymbol ) 
		return 0;
	return getFunctionId(p) != NULL;
}

static void 
RECYCLEnew(Client cntxt, MalBlkPtr mb, MalStkPtr s, InstrPtr p, lng rd, lng wr)
{
	int i, j, c;
	ValRecord *v;
	ValRecord cst;
	InstrPtr q;
	lng memLimit;
	lng cacheLimit;
	
	RECYCLEspace();
	cacheLimit = recycleCacheLimit?recycleCacheLimit:HARDLIMIT_STMT;
	if ( recycleBlk->stop >= cacheLimit)
		return ; /* no more caching */
	memLimit = recycleMemory?recycleMemory:HARDLIMIT_MEM;
	if ( recyclerUsedMemory + wr > memLimit)
		return ; /* no more caching */
		
	if ( recycleBlk->stop == 0 ){ 
		/* fake a proper MAL function signature. */
		q = newInstruction(NULL,FUNCTIONsymbol);
		setFunctionId(q, putName("recycler",8));
		setDestVar(q, newVariable(recycleBlk,GDKstrdup("recycler"),TYPE_any));
		pushInstruction(recycleBlk,q);
	}
	if ( !RECYCLEinterest(mb,p))
		return ;

#ifdef _DEBUG_RECYCLE_
	stream_printf(cntxt->fdout,"RECYCLE keep ");
	printTraceCall( cntxt->fdout,mb, s, getPC(mb,p),LIST_MAL_ALL);
#else
	(void) cntxt;
#endif
@-
The instruction is copied and the variables are
all assigned to the symbol table. This means the
link with their source disappears. We can later only
compare by value.
@c
	q = copyInstruction(p);
	for (i = 0; i< p->argc; i++) {
		j= getArg(p,i);
		v = &s->stk[j];
		VALcopy(&cst,v);
		c = fndConstant(recycleBlk, &cst, recycleBlk->vtop);
#ifdef _DEBUG_RECYCLE_
		printf("CONSTANT %s %d\n", getVarName(mb,j), c);
#endif
		if (c<0)
			c = defConstant(recycleBlk, v->vtype, &cst);
		if (v->vtype == TYPE_bat)
			BBPincref( *(int*)VALget(v), TRUE);
		setVarUsed(recycleBlk,c);
	 	setArg(q,i,c);
	}
#ifdef _DEBUG_RECYCLE_
	stream_printf(cntxt->fdout,"RECYCLE kept ");
	printInstruction( cntxt->fdout,recycleBlk, q,LIST_MAL_ALL);
#endif
	p->recycle = i= recycleBlk->stop;
	pushInstruction(recycleBlk,q);
	recycleBlk->profiler[i].clk = GDKusec();
	recycleBlk->profiler[i].counter =1;
	recycleBlk->profiler[i].ticks = GDKusec()-s->clk;
	recycleBlk->profiler[i].ibytes = rd;
	recycleBlk->profiler[i].obytes = wr;
	recyclerUsedMemory += wr;
	if (monitorRecycler == 1 ) 
		fprintf(stderr, 
			"#memory="LLFMT", stop=%d, recycled=%d, retained=%d executed=%d saved=" LLFMT "\n",
			recyclerUsedMemory, recycleBlk->stop,
			recycled, retained, statements, savedTime);
	retained++;
	recycleRecent = i;
}

@-
The generic wrappers for accessing the recycled instructions.
Before the interpreter loop is allowed to execute the instruction
we check the recycle table for available variables.

Just looking at a kept result target is not good enough.
You have to sure that the arguments are also the same.
This outrules function arguments.
@c
static int
RECYCLEcall(MalStkPtr stk, InstrPtr p){
        /* are the arguments the same as in the recycle cache */
        int i;
        InstrPtr q;

        if (p->recycle <= 0 )
                        return 0;
        q= getInstrPtr(recycleBlk,p->recycle);
        for ( i=p->retc; i< p->argc; i++)
                if( VALcmp( &stk->stk[getArg(p,i)], &getVarConstant(recycleBlk, getArg(q,i))))
                return 0;
        return 1;
}

@-
Searching for useful recycle instructions is the real challenge.
There are two major approaches. The first approach is to search
for an identical operation as the target under investigation and
reuse its result if possible.
The second approach uses the semantics of operations and 
replaces the arguments of the target to make it cheaper to execute.
For example, a previous result of a scan may be used instead
or it can be small compared to the target.

We should avoid adding the same operation twice, which
means it should be easy to find them in the first place.
Furthermore, we should only search for instructions if
we are dealing with a function call.
@c
static int
RECYCLEfind(Client cntxt, MalBlkPtr mb, MalStkPtr s, InstrPtr p)
{
	int i, j;
	InstrPtr q;
	lng clk = GDKusec();

	(void) mb;
	if( recycleBlk == 0)
		return -1;
	if (RECYCLEcall(s,p)) 
		return p->recycle;

#ifdef _DEBUG_RECYCLE_
	stream_printf(cntxt->fdout,"search\n");
	printInstruction(cntxt->fdout,mb,p, LIST_MAL_ALL);
#else 
	(void) cntxt;
#endif
	if ( RECYCLEinterest(mb,p))
	for (i=1; i<recycleBlk->stop; i++) {
		q = getInstrPtr(recycleBlk,i);
		if (
			(getFunctionId(p) != getFunctionId(q)) ||
			(p->argc != q->argc) ||
		   (getModuleId(p) != getModuleId(q)))
			continue;
		for (j=p->retc; j<p->argc; j++)
			if( VALcmp( &s->stk[getArg(p,j)], &getVarConstant(recycleBlk,getArg(q,j))))
				break;
		if (j == q->argc)
			return i;
	}
#ifdef _DEBUG_RECYCLE_
	stream_printf(cntxt->fdout,"not found\n");
#endif
	recycleSearchTime = GDKusec()-clk;
	return -1;
}

static int
RECYCLEreuse(Client cntxt, MalBlkPtr mb, MalStkPtr s, InstrPtr p)
{
	int i, j, nbid= -1, bid = -1, ridx, idx, pc = -1;
	InstrPtr q;
	static str selectRef;
	
	if (selectRef == 0) 
		selectRef= getName("select",6);

	if( recycleBlk == 0 || reusePolicy == 0)
		return -1;

	for (i = 1; i < recycleBlk->stop; i++){
		q = getInstrPtr(recycleBlk,i);

		if ((p->argc > q->argc) ||
		    (getFunctionId(p) != getFunctionId(q)) ||
		    (getModuleId(p) != getModuleId(q)))
			continue;

		switch(reusePolicy){
		case REUSE_NONE:
			/* 0: baseline, no reuse */
			break;
		case REUSE_COVER:
			/* 1: reuse smallest range covering */
			ridx= getArg(q,1);
			idx= getArg(p,1);
			if (q->argc > 3 && q->argc <= 4 && p->argc <= 4 &&
			    getFunctionId(p) == selectRef   &&
			    getVarConstant(recycleBlk, ridx).val.bval == s->stk[idx].val.bval &&
				BATatoms[getArgType(recycleBlk,q,2)].linear )

			{	
				/* Time to check for the inclusion constraint */
				int leftbound, rightbound;
				leftbound= VALcmp( &s->stk[getArg(p,2)], 
							&getVar(recycleBlk,getArg(q,2))->value) >=0;
				rightbound = p->argc == 3 || 
					VALcmp( &s->stk[getArg(p,3)], 
							&getVar(recycleBlk,getArg(q,3))->value) <=0;

				if (p->argc == 6){
						/* inclusion bounds */
						leftbound &= VALcmp( &s->stk[getArg(p,4)], 
								&getVar(recycleBlk,getArg(q,4))->value)==0;
						rightbound &= VALcmp( &s->stk[getArg(p,5)], 
								&getVar(recycleBlk,getArg(q,5))->value)==0;
				}
				if (leftbound && rightbound){
					BAT *b1, *b2;
					nbid = getVarConstant(recycleBlk, getArg(q,0)).val.bval; 
					if( bid == -1){
						bid = nbid;
						pc = i;
#ifdef _DEBUG_RECYCLE_
	b1 = BBPquickdesc(bid, FALSE);
	stream_printf(cntxt->fdout,"counts A %d -> %d \n", bid, (int)BATcount(b1));
#endif
					} else {
						b1 = BBPquickdesc(bid, FALSE);
						b2 = BBPquickdesc(nbid, FALSE);

#ifdef _DEBUG_RECYCLE_
	stream_printf(cntxt->fdout,"counts B %d -> %d %d -> %d\n", 
		bid, (int)BATcount(b1), nbid, (int)BATcount(b2));
#endif
						if (BATcount(b1) > BATcount(b2)){
							bid = nbid;
							pc = i;
						}
					}
#ifdef _DEBUG_RECYCLE_
	stream_printf(cntxt->fdout,"Inclusive range bid=%d ", bid);
	printInstruction(cntxt->fdout,recycleBlk,q, LIST_MAL_ALL);
#endif
				}
			}
		case REUSE_EXACT:
			/* 2: exact covering */
			for (j = p->retc; j < p->argc; j++)
				if (VALcmp(&s->stk[getArg(p,j)], &getVarConstant(recycleBlk,getArg(q,j))))
					goto notfound;
			
			/* found an exact match */
			/* get the results on the stack */
			for( j=0; j<q->retc; j++){
				VALcopy(&s->stk[getArg(p,j)],
					&getVarConstant(recycleBlk,getArg(q,j)) );
				if (s->stk[getArg(p,j)].vtype == TYPE_bat)
					BBPincref( s->stk[getArg(p,j)].val.bval , TRUE);
			}
			recycleBlk->profiler[i].counter++;
			recycleBlk->profiler[i].clk = GDKusec();
			p->recycle = i;
			recycled++;
			recycleRecent = i;
			savedTime += recycleBlk->profiler[i].ticks;
			return i;
			notfound: 
				continue;
		}
	}
@-
We have a candidate table from which we can draw a subsection.
We execute it in place and safe the result upon need.
@c
	if (bid >=0) {
		int k;
		i= getPC(mb,p);
#ifdef _DEBUG_RECYCLE_REUSE
	stream_printf(cntxt->fdout,"RECYCLEreuse subselect ");
	printInstruction(cntxt->fdout, recycleBlk, getInstrPtr(recycleBlk,pc), LIST_MAL_ALL);

	stream_printf(cntxt->fdout,">>>");
	printTraceCall(cntxt->fdout, mb, s,i, LIST_MAL_ALL);
#endif
		s->stk[getArg(p,1)].val.bval = bid;
		BBPincref(bid, TRUE);
		/* make sure the garbage collector is not called */
		j=s->keepAlive ;
		s->keepAlive= TRUE;
		k= p->recycle;
		p->recycle= 0;
		(void) reenterMAL(cntxt,mb,i,i+1,s,0,0);
		p->recycle= k;
		/* restore the situation */
		s->keepAlive= j;
		s->stk[getArg(p,1)].val.bval = nbid;
		BBPincref(nbid, TRUE);
		savedTime += recycleBlk->profiler[pc].ticks;
		recycleBlk->profiler[pc].counter++;
		RECYCLEexit(cntxt, mb, s, p);
		return i;
	}
	return pc;
}

int 
RECYCLEentry(Client cntxt, MalBlkPtr mb, MalStkPtr stk, InstrPtr p)
{
	int i=0;
	ValPtr lhs,rhs;
	InstrPtr q;
	ProfPtr prof;

	stk->clk= GDKusec();
	if (recycleVersion == 0 || recycleBlk == NULL )
		return 0;
	mal_set_lock(recycleLock,"recycle");
	RECYCLEversion(cntxt,mb);

	if (RECYCLEcall(stk,p)) {
		recycled++;
		q= getInstrPtr(recycleBlk, p->recycle);
#ifdef _DEBUG_RECYCLE_
		stream_printf(cntxt->fdout,"RECYCLEentry reuse\n");
		printInstruction(cntxt->fdout,mb,p, LIST_MAL_ALL);
		printInstruction(cntxt->fdout,recycleBlk,q, LIST_MAL_ALL);
#endif
		for(i=0;i< p->retc; i++) {
			lhs = &stk->stk[getArg(p,i)];
			rhs = &getVarConstant(recycleBlk, getArg(q,i));
			VALcopy(lhs,rhs);
			if( lhs->vtype == TYPE_bat)
				BBPincref(lhs->val.bval, TRUE);
		}
		/* don't count times saved from cached bats*/
		prof = &recycleBlk->profiler[p->recycle];
		if (prof->counter==1 && getName("bind",4)== getFunctionId(p) && 
				getModuleId(p)==getName("sql",3))
			prof->ticks =  GDKusec()- stk->clk;
		prof->counter++;
                prof->clk = GDKusec();
		savedTime += prof->ticks;
		recycleRecent = p->recycle;
		mal_unset_lock(recycleLock,"recycle");
		return 1;
	} 
	statements++;
	mal_unset_lock(recycleLock,"recycle");
	i=  RECYCLEreuse(cntxt,mb,stk,p) >= 0;
	return i;
}

@-
The 'exit' instruction is called after the interpreter loop
itself and has to decide on the results obtained.
This is the place where we should call recycle optimization routines( admission policies).
It can use the timing information gathered from the previous call,
which is stored in the stack frame to avoid concurrency problems.
@c
void
RECYCLEexitImpl(Client cntxt, MalBlkPtr mb, MalStkPtr stk, InstrPtr p){
	lng clk = 0;
	lng memLimit;
	lng cacheLimit;
	lng rd = getVolume(stk,p, 1)/ RU +1;
	lng wr = getVolume(stk,p, 0)/ RU +1;
	ValRecord *v;

	RECYCLEversion(cntxt,mb);
	clk= GDKusec()-stk->clk;

	memLimit = recycleMemory?recycleMemory:HARDLIMIT_MEM;
	cacheLimit = recycleCacheLimit?recycleCacheLimit:HARDLIMIT_STMT;

	v = &stk->stk[getArg(p,0)]; /* don't count memory for persistent bats */
	if ((v->vtype == TYPE_bat) && (BBP_status( *(int*)VALget(v)) & BBPPERSISTENT))
		wr = 0;

	if ( wr > memLimit)
		return;
	if (recycleBlk)
		if ( recyclerUsedMemory +  wr > memLimit ||
	    		recycleBlk->stop >= cacheLimit ){
			RECYCLEcleanCache(wr);
			RECYCLEversion(cntxt,mb);
		}

	if ( RECYCLEinterest(mb,p))
	switch(retainPolicy) {
	case RETAIN_NONE:
		/* RETAIN_NONE: baseline, keeps stat, no retain, no reuse */
		break;
	case RETAIN_ALL:
		/* RETAIN_ALL: infinite case, retain all new instructions */
		if (RECYCLEfind(cntxt,mb,stk,p)<0 )
			(void) RECYCLEnew(cntxt,mb, stk, p, rd, wr);
		break;
	case RETAIN_TIME:
		/* RETAIN_TIME: time-based semantics, retain if beneficial */
		if (clk > ABS(recycleTime) && RECYCLEfind(cntxt,mb,stk,p)< 0)
			(void) RECYCLEnew(cntxt,mb, stk, p, rd, wr);
		break;
	case RETAIN_SIZE:
	{
		/* RETAIN_SIZE: size cost model */
		if (recycleVolume && RECYCLEfind(cntxt,mb,stk,p)<0){
			if (rd+wr > recycleVolume){
				(void) RECYCLEnew(cntxt,mb, stk, p, rd, wr);
#ifdef _DEBUG_RECYCLE_
				stream_printf(cntxt->fdout,"RECYCLEexit size " LLFMT " " LLFMT "\n",rd,wr);
#endif
			}
		}
		break;
	}
	case RETAIN_VOL:
	{
		/* RETAIN_VOL: volumetric cost model (time x size )*/
		if (recycleVolume && RECYCLEfind(cntxt,mb,stk,p)<0 ){
			if (recycleAlpha *(rd+wr) + (1-recycleAlpha)* clk > (recycleVolume+1) * (recycleTime+1)){
				(void) RECYCLEnew(cntxt,mb, stk, p, rd, wr);
#ifdef _DEBUG_RECYCLE_
				stream_printf(cntxt->fdout,"RECYCLEexit volume " LLFMT " " LLFMT " " LLFMT " " LLFMT " \n",clk,rd,wr,(rd+wr)*clk);
				stream_printf(cntxt->fdout,"RECYCLEexit volume " LLFMT " " LLFMT "\n", recycleVolume, recycleTime);
#endif
			}
		}
		break;
	}
	case RETAIN_ADAPT:
		/* RETAIN_ADAPT: searching the cache may take too long? */
		if ( RECYCLEfind(cntxt,mb,stk,p)< 0){
			if (recycleSearchTime > recycleTime)
				RECYCLEcleanCache(wr);
			RECYCLEnew(cntxt,mb, stk, p, rd, wr);
		}
	}
}

void
RECYCLEexit(Client cntxt, MalBlkPtr mb, MalStkPtr stk, InstrPtr p){
	mal_set_lock(recycleLock,"recycle");
	RECYCLEexitImpl(cntxt,mb,stk,p);
	mal_unset_lock(recycleLock,"recycle");
}

@-
At the end of session we should remove all
knowledge from the recycle cache.
@c
void
RECYCLEshutdown(Client cntxt){
	MalBlkPtr mb= recycleBlk;
	int i;
	
	if( recycleBlk == NULL)
		return ;

#ifdef _DEBUG_RECYCLE_
	stream_printf(cntxt->fdout,"RECYCLE shutdown\n");
	printFunction(cntxt->fdout,recycleBlk,0);
	printStack(cntxt->fdout,mb,0);
#else
	(void) cntxt;
#endif
	mal_set_lock(recycleLock,"recycle");
	recycleBlk= NULL;
	recycleVersion++;
	recycled = statements = 0;
	savedTime = recycleSearchTime = 0;
	recyclerUsedMemory = 0;
	mal_unset_lock(recycleLock,"recycle");
	for (i=mb->stop-1; i>=0; i--)
		RECYCLEgarbagecollect(mb, getInstrPtr(mb,i));
	freeMalBlk(mb);
}

@-
Evict a bat from recycle cache, for instance if an update on it 
has been detected. 
@c
static void 
RECYCLEevict(Client cntxt, bat *bats, int btop){
	int i,j,k,top = 0;
	int action = 1, upd = 0;
	int *dropped;
	InstrPtr p;
	
	if( recycleBlk == NULL)
		return;

#ifdef _DEBUG_RECYCLE_ 
	stream_printf(cntxt->fdout,"RECYCLE evict\n");
	printFunction(cntxt->fdout,recycleBlk,0);
#else
	(void) cntxt;
#endif

	dropped = (int *) alloca(sizeof(int)*recycleBlk->vtop);
	memset(dropped, 0, sizeof(int)*recycleBlk->vtop);

	for( i=0; i<btop; i++)
		dropped[top++] = bats[i];
	while (action){
		action= 0;
		for (i=1; i<recycleBlk->stop; i++){
			p = getInstrPtr(recycleBlk,i);
			for (j=p->retc; j<p->argc; j++)
				if(getArgType(recycleBlk,p,j)==TYPE_bat || 
					isaBatType(getArgType(recycleBlk, p,j)) ){
					int nbid = getVarConstant(recycleBlk, getArg(p,j)).val.bval; 
					if (nbid == 0) continue;
					for (k=0; k<top; k++)
						if (dropped[k]== nbid)
							break;
					if (k < top) break;
			}
			if (j<p->argc){  /* delete instruction dependent on updated bat */
				for (j=0;j<p->retc; j++)  /* mark result bats as dropped */
				if(getArgType(recycleBlk,p,j)==TYPE_bat || 
					isaBatType(getArgType(recycleBlk, p,j)) )
					dropped[top++]= getVarConstant(recycleBlk, getArg(p,j)).val.bval; 
				RECYCLEgarbagecollect(recycleBlk, p);
				removeInstruction(recycleBlk, p);
@-
we assume that the variables defined are only used later on in the recycle
cache. This can be enforced by never re-sorting it. Under this condition
we only have to make one step back in the look.
@c
				i--;
				action++;
				continue;
			}
		}
		if (action) upd++;
	}
	if (upd){
		recycleVersion++; /* warn other threads */
		trimMalVariables(recycleBlk);
	}
}

@-
Once we encounter an update we check and clean the recycle cache from 
instructions dependent on the updated bat.
@c
void RECYCLEreset(Client cntxt, MalBlkPtr mb, MalStkPtr stk, InstrPtr p)
{
	int i,j, btop=0;
	int *b;
	ValRecord *v;
	InstrPtr q;


#ifdef _DEBUG_RECYCLE_
	stream_printf(cntxt->fdout,"RECYCLE reset\n");
#else
	(void) cntxt;
#endif
	if( recycleBlk == NULL)
		return;
	b = (int *)alloca(sizeof(int)*recycleBlk->stop);

	if (p->argc == 2){
		if(getArgType(mb,p,1)==TYPE_bat || 
			isaBatType(getArgType(mb, p,1)) ){
 			v = &stk->stk[getArg(p,1)];
			if(v->vtype == TYPE_bat && v->val.bval )
				b[btop++] = v->val.bval;
		}

	} else if (p->argc > 2) {
		for (i=1; i<recycleBlk->stop; i++) {
			q = getInstrPtr(recycleBlk,i);
			if (getName("bind",4)== getFunctionId(q) && getModuleId(q)==getName("sql",3)){
				for (j=p->retc; j<p->argc; j++)
					if( VALcmp( &stk->stk[getArg(p,j)], &getVarConstant(recycleBlk,getArg(q,j))))
					break;
				if (j == p->argc){
					v = &getVarConstant(recycleBlk,getArg(q,0));
					if( v->val.bval )
						b[btop++] = v->val.bval;
				}
			}
		}
	}
	if (btop)
		RECYCLEevict(cntxt,b,btop);

}
