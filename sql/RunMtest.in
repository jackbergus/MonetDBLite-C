builddir=`pwd`
# make sure srcdir contains absolute path name
srcdir=`cd '@srcdir@'; pwd`
uname=`uname`

# default in MonetDB4
version=4
conf=MonetDB.conf

for arg
do
    case "$arg" in
    -4)
        version=4
        conf=MonetDB.conf;;
    -5)
        version=5
        conf=monetdb5.conf;;
    esac
done

# where compiled modules are to be found
MOD_PATH="${builddir}/src/backends/monet$version/.libs:${builddir}/src/backends/monet$version:${srcdir}/src/backends/monet$version:`monetdb$version-config --modpath`"

if [ "${LD_LIBRARY_PATH}" ] ; then
	LD_LIBRARY_PATH=":${LD_LIBRARY_PATH}"
fi
if [ "${uname}" = "Darwin"  -a  "${DYLD_LIBRARY_PATH}" ] ; then
	DYLD_LIBRARY_PATH=":${DYLD_LIBRARY_PATH}"
fi
if [ "${uname}" = "AIX"  -a  "${LIBPATH}" ] ; then
	LIBPATH=":${LIBPATH}"
fi

# enhance PATH with Msql and MonetDB binaries
PATH="${builddir}/src/tools:$PATH"
libpath="${MOD_PATH}:${builddir}/src/server/.libs"
LD_LIBRARY_PATH="${libpath}${LD_LIBRARY_PATH}"
if [ "${uname}" = "Darwin" ] ; then
	DYLD_LIBRARY_PATH="${libpath}${DYLD_LIBRARY_PATH}"
	export DYLD_LIBRARY_PATH
fi
if [ "${uname}" = "AIX" ] ; then
	LIBPATH="${libpath}${LIBPATH}"
	export LIBPATH
fi
export PATH LD_LIBRARY_PATH

# execute Mtest.py in the source directory
cd "$srcdir"

# execute the script
# if no arguments, do a recursive test (Mtest.py -r), else pass on the
# arguments.
# if the environment variable MTEST_AT is set (value does not matter),
# pass the --at flag to Mtest.py so that it uses the at command as a
# watchdog.
exec Mtest.py --config="`monetdb$version-config --sysconfdir`/$conf" --monet_mod_path="$MOD_PATH" --dbfarm="${builddir}/dbfarm" --sql_logdir="${builddir}/sql_logs" --xquery_logdir="${builddir}/xquery_logs" --TSTSRCBASE="$srcdir" --TSTBLDBASE="$builddir" --TSTTRGBASE="${builddir}" ${MTEST_AT+--at} "${@--rq}"
# --SQL_PREFIX="${builddir}/src/tools"
