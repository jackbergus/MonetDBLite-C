builddir=`pwd`
# make sure srcdir contains absolute path name
srcdir=`cd '@srcdir@'; pwd`
uname=`uname`

MONETDB_PREFIX=@MONETDB_PREFIX@

if [ ! -x "${MONETDB_PREFIX}/bin/Mtest.py" ]
then
	echo "Mtest.py not found, install MonetDB first" >&2
	exit 1
fi

# where compiled modules are to be found
MOD_PATH="${builddir}/src/backends/@SQL_BACKEND@/.libs:${builddir}/src/backends/@SQL_BACKEND@:${MONETDB_PREFIX}/lib/MonetDB"

if [ "${LD_LIBRARY_PATH}" ] ; then
	LD_LIBRARY_PATH=":${LD_LIBRARY_PATH}"
fi
if [ "${uname}" = "Darwin"  -a  "${DYLD_LIBRARY_PATH}" ] ; then
	DYLD_LIBRARY_PATH=":${DYLD_LIBRARY_PATH}"
fi
if [ "${uname}" = "AIX"  -a  "${LIBPATH}" ] ; then
	LIBPATH=":${LIBPATH}"
fi

# enhance PATH with Msql and MonetDB binaries
PATH="${builddir}/src/client:${builddir}/src/tools:${MONETDB_PREFIX}/bin:$PATH"
libpath="${MOD_PATH}:${builddir}/src/client/.libs:${builddir}/src/server/.libs:${builddir}/src/odbc/driver/.libs:${builddir}/src/odbc/setup/.libs"
LD_LIBRARY_PATH="${libpath}${LD_LIBRARY_PATH}"
if [ "${uname}" = "Darwin" ] ; then
	DYLD_LIBRARY_PATH="${libpath}${DYLD_LIBRARY_PATH}"
	export DYLD_LIBRARY_PATH
fi
if [ "${uname}" = "AIX" ] ; then
	LIBPATH="${libpath}${LIBPATH}"
	export LIBPATH
fi
export PATH LD_LIBRARY_PATH

# execute Mtest.py in the source directory
cd "$srcdir"

# execute the script
# if no arguments, do a recursive test (Mtest.py -r), else pass on the
# arguments.
# if the environment variable MTEST_AT is set (value does not matter),
# pass the --at flag to Mtest.py so that it uses the at command as a
# watchdog.
exec Mtest.py --monet_mod_path="$MOD_PATH" --SQL_PREFIX="${builddir}/src/tools" --TSTSRCBASE="$srcdir" --TSTBLDBASE="$builddir" --TSTTRGBASE="${builddir}" --dbfarm="${builddir}/dbfarm" --sql_logdir="${builddir}/log" ${MTEST_AT+--at} "${@--r}"
