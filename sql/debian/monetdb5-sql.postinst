#!/bin/sh

set -e

case "$1" in
    configure)
	mkdir -p /var/lib/MonetDB /var/run/MonetDB
	chown monetdb.monetdb /var/lib/MonetDB /var/run/MonetDB
	chmod ug=rwx,o= /var/lib/MonetDB /var/run/MonetDB
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


