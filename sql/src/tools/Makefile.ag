MTSAFE

SWIGFLAGS = $(MONETDB_INCS)
INCLUDES = -I$(MONETDB_INCLUDEDIR)/C $(MONETDB_INCS) $(PTHREAD_INCS) $(PYTHON_INCS)

# with gcc we could use these
#X_CFLAGS = -Wno-unused-parameter -Wno-unused-function
# but we certainly have to override the default X_CFLAGS:
X_CFLAGS =

GDK_LIBS = $(PTHREAD_LIBS) $(MALLOC_LIBS)
EXTRA_LIBS = $(SOCKET_LIBS) $(DL_LIBS) $(GDK_LIBS) 

STATIC_MODS = -L$(MONETDB_PREFIX)/lib/MonetDB \
	-l_builtin -l_arith -l_bat -l_algebra -l_sys -l_trans -l_str -l_constant

smallTOC_SHARED_MODS =	\
	-l_mapi	\
	\
	-l_aggr	\
	-l_aggrX3	\
	-l_alarm	\
	-l_ascii_io	\
	-l_bat_arith	\
	-l_blob	\
	-l_enum	\
	-l_mkey	\
	-l_mmath	\
	-l_monettime	\
	-l_pcre	\
	-l_pqueue	\
	-l_streams	\
	-l_unix	\
	-l_xtables	\
	\
	-l_txtsim	\
	\
	../backends/$(SQL_BACKEND)/lib_sql_server

EXTRA_DIST = static_modules.mx mysqldump2bulkload.py

lib_initmodules = {
	NOINST
	SOURCES = initmodules.mx
}

bin_Mserver = {
	COND = LINK_STATIC
	SOURCES = Mserver.mx
	LIBS = -L$(MONETDB_PREFIX)/lib libinitmodules STATIC_MODS @SHARED_LIBS@ $(MONETDB_LIBS) -lbat $(EXTRA_LIBS) -lmonet -lmutils -lstream
}

lib_embeddedsql = {
	SOURCES = embeddedclient.mx
	LIBS = libinitmodules STATIC_MODS @SHARED_LIBS@ $(MONETDB_LIBS) -lbat $(EXTRA_LIBS) -lmonet -lMapi -lmutils -lstream
}

bin_Mbeddedsql = {
	SOURCES = prog.c
	LIBS = libembeddedsql libinitmodules STATIC_MODS @SHARED_LIBS@ $(MONETDB_LIBS) -lbat $(EXTRA_LIBS) -lmonet -lMapi -lmutils -lstream
}

bin_embeddedExample = {
	SOURCES = embeddedExample.c
	DIR = pkglibdir/Tests
	LIBS = libembeddedsql libinitmodules STATIC_MODS @SHARED_LIBS@ $(MONETDB_LIBS) -lbat $(EXTRA_LIBS) -lmonet -lMapi -lmutils -lstream
}

scripts_h = {
	EXT = h
	DIR = includedir
	SOURCES = embeddedclient.mx
}

# we need this flag to allow for a name that does not start with "lib"
_monetdb_la_LDFLAGS = -module

lib_monetdb = {
	COND = HAVE_PYTHON_SWIG
	PREFIX =
	NAME = _monetdb
	SOURCES = monetdb.py.i
	LIBS = libembeddedsql $(PYTHON_LIBS) $(MONETDB_LIBS) -lMapi -lmutils -lstream
	DIR = $(prefix)/$(PYTHON_LIBDIR)
}

scripts_py = {
	COND = HAVE_PYTHON_SWIG
        EXT = py
        SOURCES = monetdb.py.i
        TARGETS = monetdb.py
        DIR = $(prefix)/$(PYTHON_LIBDIR)
}
