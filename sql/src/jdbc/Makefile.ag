SUBDIRS = tests

EXTRA_DIST = manifest jdbcmanual.tex

# note: the name of the Jar generated by make differs from what ant
#       would generate.  This may be confusing, but is maintained for
#       legacy reasons.  This make target is only meant to enable
#       automatic testing, as for distribution "ant dist" should be run.
jar_MonetDB_JDBC = {
	DIR = datadir/MonetDB/lib
	SOURCES = nl/cwi/monetdb/jdbc/MonetConnection.java \
	          nl/cwi/monetdb/jdbc/MonetDatabaseMetaData.java \
	          nl/cwi/monetdb/jdbc/MonetDriver.java.in \
	          nl/cwi/monetdb/jdbc/MonetResultSet.java \
	          nl/cwi/monetdb/jdbc/MonetSavepoint.java \
	          nl/cwi/monetdb/jdbc/MonetStatement.java \
	          nl/cwi/monetdb/jdbc/MonetPreparedStatement.java \
	          nl/cwi/monetdb/jdbc/MonetPreparedStatementJavaImpl.java \
	          nl/cwi/monetdb/jdbc/MonetSocketBlockMode.java \
	          nl/cwi/monetdb/jdbc/MonetDataSource.java \
	          nl/cwi/monetdb/jdbc/MonetClob.java \
	          nl/cwi/monetdb/client/JdbcClient.java \
	          nl/cwi/monetdb/client/util/OptionsException.java \
	          nl/cwi/monetdb/client/util/XMLExporter.java \
	          nl/cwi/monetdb/client/util/CmdLineOpts.java \
	          nl/cwi/monetdb/client/util/PasswordField.java \
	          nl/cwi/monetdb/client/util/Exporter.java \
	          nl/cwi/monetdb/client/util/SQLExporter.java
	MANIFEST = srcdir/manifest
}

