# force sql.o to not depend on .../rdf/rdf.h since it only optionally created
RDF_INC = -I../../../../MonetDB5/src/extras/rdf

INCLUDES = ../../include ../../common ../../storage ../../server \
	../../../../MonetDB5/src/modules/atoms \
	../../../../MonetDB5/src/compiler \
	../../../../MonetDB5/src/modules/kernel \
	../../../../MonetDB5/src/mal \
	../../../../MonetDB5/src/modules/mal \
	../../../../MonetDB5/src/optimizer \
	../../../../MonetDB5/src/scheduler \
	$(RDF_INC) \
	../../../../clients/src/mapilib \
	../../../../MonetDB/src/common \
	../../../../common/stream \
	../../../../MonetDB/src/gdk \
	$(READLINE_INCS)

lib__sql = {
	DIR = libdir/MonetDB5
	SOURCES = \
		sql.mx \
		sql_user.mx \
		sql_scenario.mx \
		sql_gencode.mx \
		sql_optimizer.mx \
		sql_result.mx \
		sql_readline.mx \
		sql_emptyset.mx \
		sql_bpm.mx
	LIBS = ../../server/libsqlserver ../../storage/libstore ../../storage/bat/libbatstore ../../storage/restrict/librestrictstore ../../storage/bpm/libbpmstore ../../common/libsqlcommon \
		../../../../MonetDB5/src/tools/libmonetdb5 \
		../../../../MonetDB/src/gdk/libbat \
		../../../../common/stream/libstream \
		$(READLINE_LIBS) $(PTHREAD_LIBS)
}


lib_embeddedsql5 = {
	SOURCES = embeddedclient.c.in
	LIBS = ../../server/libsqlserver ../../storage/libstore ../../storage/bat/libbatstore ../../storage/restrict/librestrictstore ../../storage/bpm/libbpmstore ../../common/libsqlcommon \
		../../../../MonetDB5/src/tools/libmonetdb5 \
		../../../../MonetDB/src/gdk/libbat \
		../../../../clients/src/mapilib/libMapi \
		../../../../MonetDB/src/common/libmutils \
		../../../../common/stream/libstream \
		$(READLINE_LIBS) $(PTHREAD_LIBS)
}

bin_Mbeddedsql5 = {
	SOURCES = prog.c
	LIBS = libembeddedsql5 ../../server/libsqlserver ../../storage/libstore ../../storage/bat/libbatstore ../../storage/restrict/librestrictstore ../../storage/bpm/libbpmstore ../../common/libsqlcommon \
		../../../../MonetDB5/src/tools/libmonetdb5 \
		../../../../MonetDB/src/gdk/libbat \
		../../../../clients/src/mapilib/libMapi \
		../../../../MonetDB/src/common/libmutils \
		../../../../common/stream/libstream \
		$(READLINE_LIBS) $(PTHREAD_LIBS) $(curl_LIBS)
}

headers_h = {
	HEADERS = h
	DIR = includedir/MonetDB5/sql
	SOURCES = embeddedclient.h
}

headers_pc = {
	COND = NOT_WIN32
	HEADERS = pc
	DIR = libdir/pkgconfig
	SOURCES = monetdb-embeddedsql.pc.in
}

headers_mal = {
	HEADERS = mal
	DIR = libdir/MonetDB5
	SOURCES = sql.mx sql_bpm.mx sql_emptyset.mx
}

headers_autoload = {
	HEADERS = mal
	DIR = libdir/MonetDB5/autoload
	SOURCES = 40_sql.mal
}

EXTRA_DIST = 40_sql.mal 
