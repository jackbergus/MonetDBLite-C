INCLUDES = ../../include ../../common ../../storage ../../server $(MONET5_INCS) $(MONETDB_INCS)

lib__sql = {
	DIR = libdir/MonetDB5
	SOURCES = \
		sql.mx \
		sql_scenario.mx \
		sql_gencode.mx \
		sql_optimizer.mx \
		sql_cache.mx \
		sql_result.mx \
		sql_readline.mx
	WINLIBS = -lbat -lstream -l_streams -l_bat -l_kernel 
	LIBS = ../../server/libsqlserver ../../storage/bat/libbatstore ../../common/libsqlcommon $(MONET5_LIBS) -l_bat -lmal $(MONETDB_LIBS) -lbat -lstream
}


lib_embeddedsql5 = {
	SOURCES = embeddedclient.mx
	LIBS = ../../server/libsqlserver ../../storage/bat/libbatstore ../../common/libsqlcommon $(MONET5_LIBS) -l_bat -lmal $(MONETDB_LIBS) -lbat -lMapi -lstream 
}

bin_Mbeddedsql5 = {
	SOURCES = prog.c
	LIBS = libembeddedsql5 ../../server/libsqlserver ../../storage/bat/libbatstore ../../common/libsqlcommon $(MONET5_LIBS) -l_bat -lmal $(MONETDB_LIBS) -lbat -lMapi -lstream 
}

lib__sql_cache = {
	DIR = libdir/MonetDB5
	SOURCES = dummy.c
}

scripts_mal = {
	DIR = libdir/MonetDB5
	SOURCES = sql.mx sql_scenario.mx sql_cache.mx
}
