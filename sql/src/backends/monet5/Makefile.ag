man_MANS = monetdb.1 merovingian.1

INCLUDES = ../../include ../../common ../../storage ../../server \
	$(MONETDB5_INCS) $(CLIENTS_INCS) $(MONETDB_INCS) $(READLINE_INCS)

EXTRA_DIST = $(man_MANS)

lib__sql = {
	DIR = libdir/MonetDB5
	SOURCES = \
		sql.mx \
		sql_user.mx \
		sql_scenario.mx \
		sql_gencode.mx \
		sql_optimizer.mx \
		sql_result.mx \
		sql_readline.mx \
		sql_emptyset.mx \
		sql_bpm.mx
	LIBS = ../../server/libsqlserver ../../storage/libstore ../../storage/bat/libbatstore ../../storage/restrict/librestrictstore ../../storage/bpm/libbpmstore ../../common/libsqlcommon \
		$(MONETDB5_MODS) -l_str -l_blob -l_logger -l_mtime -l_bat5 -l_optimizer -l_tablet -l_cluster -l_bpm -l_remote -l_run_octopus $(MONETDB5_RDF_LIB) $(MONETDB5_LIBS) -lmonetdb5 -l_mal_mapi \
		$(MONETDB_LIBS) -lbat -lstream $(READLINE_LIBS) $(PTHREAD_LIBS)
}


lib_embeddedsql5 = {
	SOURCES = embeddedclient.c.in
	LIBS = ../../server/libsqlserver ../../storage/libstore ../../storage/bat/libbatstore ../../storage/restrict/librestrictstore ../../storage/bpm/libbpmstore ../../common/libsqlcommon \
		$(MONETDB5_MODS) -l_logger -l_bat5 -l_tablet -l_cluster -l_bpm $(MONETDB5_LIBS) -lmonetdb5 \
		$(CLIENTS_LIBS) $(MONETDB_LIBS) -lbat -lMapi -lmutils -lstream $(READLINE_LIBS) $(PTHREAD_LIBS)
}

bin_Mbeddedsql5 = {
	SOURCES = prog.c
	LIBS = libembeddedsql5 ../../server/libsqlserver ../../storage/libstore ../../storage/bat/libbatstore ../../storage/restrict/librestrictstore ../../storage/bpm/libbpmstore ../../common/libsqlcommon \
		$(MONETDB5_MODS) -l_logger -l_bat5 -l_tablet -l_cluster -l_bpm $(MONETDB5_LIBS) -lmonetdb5 \
		$(CLIENTS_LIBS) $(MONETDB_LIBS) -lbat -lMapi -lmutils -lstream $(READLINE_LIBS) $(PTHREAD_LIBS)
}

headers_h = {
	HEADERS = h
	DIR = includedir/MonetDB5/sql
	SOURCES = embeddedclient.h
}

headers_mal = {
	HEADERS = mal
	DIR = libdir/MonetDB5
	SOURCES = sql.mx sql_bpm.mx sql_emptyset.mx
}

bin_merovingian = {
	COND = NOT_WIN32
	SOURCES = merovingian.mx
	LIBS = $(MONETDB5_LIBS) -lmonetdb5 @SHARED_LIBS@ $(MONETDB_LIBS) -lbat -lstream \
		   $(SOCKET_LIBS) $(Z_LIBS) $(BZ_LIBS) \
		   $(MALLOC_LIBS)
}

bin_monetdb = {
	COND = NOT_WIN32
	SOURCES = monetdb.mx
	LIBS = $(MONETDB5_LIBS) -lmonetdb5 @SHARED_LIBS@ $(MONETDB_LIBS) -lbat \
	       $(MALLOC_LIBS)
}

EXTRA_DIST_DIR = Tests
