@echo off

if not "%1"=="" goto skip
call %0 -r
goto end

:skip

setlocal

set builddir=@SQL_BUILD@
set srcdir=@SQL_SOURCE@

set MOD_PATH=%builddir%\src\backends\monet4\.libs;%sqldir%\src\backends\monet4;@MONETDB_PREFIX@\lib\MonetDB

set PATH=%builddir%\src\common;%builddir%\src\storage\bat;%builddir%\src\tools;@MONETDB_PREFIX@\bin;@MONETDB_PREFIX@\lib;%PATH%
set PATH=%builddir%\src\server;%builddir%\src\odbc\driver;%builddir%\src\odbc\setup;%PATH%
set PATH=%MOD_PATH%;%PATH%

set PYTHONPATH=@MONETDB_PREFIX@\share\MonetDB\python

REM execute Mtest.py in the source directory
pushd %srcdir%

call python "@MONETDB_PREFIX@\bin\Mtest.py" "--monet_mod_path=%MOD_PATH%" "--SQL_PREFIX=%builddir%\src\tools" "--TSTSRCBASE=%srcdir%" "--TSTBLDBASE=%builddir%" "--TSTTRGBASE=%builddir%" "--dbfarm=%builddir%\dbfarm" "--sql_logdir=%builddir%\log" %*

popd
endlocal

:end
