# minimal inital version as required by Mtest.py

pkg="@PACKAGE@"
source="@QSQL_SOURCE@"
build="@QSQL_BUILD@"
prefix="@Qprefix@"
exec_prefix="@Qexec_prefix@"

libdir="@Qlibdir@"
M4libdir="${libdir}/MonetDB4"
M5libdir="${libdir}/MonetDB5"
pythonlibdir="${prefix}/@PYTHON_LIBDIR@"

usage()
{
    cat <<EOF
Usage: `basename $0` [OPTION]

Known values for OPTION are:

  --build		print ${pkg} build directory
  --source		print ${pkg} source directory
  --modpath4		print default ${pkg} module path (for M4)
  --modpath5		print default ${pkg} module path (for M5)
  --help		display this help and exit

Install directories ${pkg} was configured to
  --prefix --pythonlibdir

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1 >&2
fi

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in

    --prefix)
	echo $prefix
	;;

    --build)
	echo $build
	;;

    --source)
	echo $source
	;;

    --modpath4)
        echo 	$M4libdir:$M4libdir/lib:$M4libdir/bin
        ;;

    --modpath5)
        echo 	$M5libdir:$M5libdir/lib:$M5libdir/bin
        ;;

    --*dir)
        dirname=\$`echo $1 | sed -e 's,^--,,'`
        dirname=`eval echo $dirname`
        test -z "$dirname" && exit 1
        echo $dirname
        exit 0
        ;;

    --help)
	usage 0
	;;

    *)
	usage 1 >&2
	;;
    esac
    shift
done

exit 0
