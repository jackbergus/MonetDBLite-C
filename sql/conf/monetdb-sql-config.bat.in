@echo off

REM minimal inital version as required by Mtest.py

REM	set prefix=%~dp0
REM	set prefix=%prefix:~0,-4%

set pkg=@PACKAGE@
set version=@VERSION@
set source=@SQL_SOURCE@
set build=@SQL_BUILD@
set prefix=@prefix@
set exec_prefix=@exec_prefix@
set libdir=@libdir@
set M5libdir=%libdir%\MonetDB5
set modpath5=%M5libdir%
set pythonlibdir=%prefix%\@PYTHON_LIBDIR@   

if "%1" == ""	goto usage

goto case

:shift
shift

:case
if "%1" == ""			goto :EOF
if "%1" == "--help"		goto usage
if "%1" == "--version"		echo %version%&		goto shift
if "%1" == "--source"		echo %source%&		goto shift
if "%1" == "--build"		echo %build%&		goto shift
if "%1" == "--prefix"		echo %prefix%&		goto shift
if "%1" == "--modpath5"		echo %modpath5%&	goto shift
if "%1" == "--pythonlibdir"	echo %pythonlibdir%&	goto shift
if "%1" == "--internal"					goto shift
if not "%1" == "--conds"	goto usage

:conds
	echo BITS32=@BITS32_FALSE@
	echo BITS64=@BITS64_FALSE@
	echo DOCTOOLS=@DOCTOOLS_FALSE@
	echo HAVE_BUILDTOOLS=@HAVE_BUILDTOOLS_FALSE@
	echo HAVE_CLIENTS=@HAVE_CLIENTS_FALSE@
	echo HAVE_EXTRA_MK=@HAVE_EXTRA_MK_FALSE@
	echo HAVE_MONETDB5=@HAVE_MONETDB5_FALSE@
	echo HAVE_MONETDB5_RDF=@HAVE_MONETDB5_RDF_FALSE@
	echo HAVE_MONETDB5_XML=@HAVE_MONETDB5_XML_FALSE@
	echo HAVE_MONETDB=@HAVE_MONETDB_FALSE@
	echo HAVE_PCRE=@HAVE_PCRE_FALSE@
	echo HAVE_PERL_DEVEL=@HAVE_PERL_DEVEL_FALSE@
	echo HAVE_PERL=@HAVE_PERL_FALSE@
	echo HAVE_PERL_SWIG=@HAVE_PERL_SWIG_FALSE@
	echo HAVE_PYTHON=@HAVE_PYTHON_FALSE@
	echo HAVE_RUBYGEM=@HAVE_RUBYGEM_FALSE@
	echo HAVE_SWIG=@HAVE_SWIG_FALSE@
	echo LINK_STATIC=@LINK_STATIC_FALSE@
	echo NATIVE_WIN32=@NATIVE_WIN32_FALSE@
	echo NEED_MX=@NEED_MX_FALSE@
	echo NOT_WIN32=@NOT_WIN32_FALSE@
	echo PROFILING=@PROFILING_FALSE@
goto shift

:usage
	echo.
	echo Usage: monetdb-sql-config [OPTION]
	echo.
	echo Known values for OPTION are:
	echo.
	echo   --build		print %pkg% build directory
	echo   --source		print %pkg% source directory
	echo   --modpath5	print default %pkg% module directory (for M5)
	echo   --conds		conditionals as set by configure
	echo   --help		display this help and exit
	echo   --version	output version information
	echo.
	echo Install directories %pkg% was configured to
	echo   --prefix --pythonlibdir
	echo.

