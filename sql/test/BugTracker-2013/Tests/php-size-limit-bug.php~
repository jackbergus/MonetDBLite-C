<?php
    require '../lib/php_monetdb.php';

    $db = monetdb_connect($lang = "sql", $host = "127.0.0.1", $port = "50000" , $username = "monetdb", $password = "monetdb", $database = "db" ) or die(monetdb_last_error());

    $packet_size = 20000;

    $sql = 'select 1';
    $sql = str_pad($sql, $packet_size , ' ');

    echo strlen($sql) . "\n";

    $res = monetdb_query($sql);
    while ( $row = monetdb_fetch_assoc($res) ) { print_r($row); }

    monetdb_disconnect();
?>