@echo off

if not "%1"=="" goto skip
call %0 -r
goto end

:skip

setlocal

set builddir=@SQL_BUILD@
set srcdir=@SQL_SOURCE@

set PATH=%builddir%\src\client;%builddir%\src\tools;@MONETDB_PREFIX@\bin;@MONETDB_PREFIX@\lib;%PATH%
set PATH=%builddir%\src\server;%builddir%\src\odbc\driver;%builddir%\src\odbc\setup;%PATH%
set PATH=%MOD_PATH%;%PATH%

REM execute Mapprove.py in the source directory
pushd %srcdir%

call python "@MONETDB_PREFIX@\bin\Mapprove.py" "--TSTSRCBASE=%srcdir%" "--TSTBLDBASE=%builddir%" "--TSTTRGBASE=%builddir%" %*

popd
endlocal

:end
