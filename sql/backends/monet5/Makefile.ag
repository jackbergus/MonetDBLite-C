SUBDIRS = NOT_WIN32?merovingian NOT_WIN32?vaults

# force sql.o to not depend on .../rdf/rdf.h since it only optionally created
RDF_INC = -I../../../monetdb5/extras/rdf

INCLUDES = ../../include ../../common ../../storage ../../server \
		   ../../../monetdb5/misc \
		   ../../../monetdb5/modules/atoms \
		   ../../../monetdb5/compiler \
		   ../../../monetdb5/modules/kernel \
		   ../../../monetdb5/mal \
		   ../../../monetdb5/modules/mal \
		   ../../../monetdb5/optimizer \
		   ../../../monetdb5/scheduler \
		   ../../../clients/mapilib \
		   ../../../common/options \
		   ../../../common/stream \
		   ../../../gdk \
		   $(RDF_INC) \
		   $(READLINE_INCS)

lib__sql = {
	DIR = libdir/monetdb5
	SOURCES = \
		sql.mx \
		sql_user.mx \
		sql_scenario.mx \
		sql_gencode.mx \
		sql_optimizer.mx \
		sql_result.mx \
		sql_readline.mx \
		sql_emptyset.mx \
		sql_bpm.mx
	LIBS = ../../server/libsqlserver \
		   ../../storage/libstore \
		   ../../storage/bat/libbatstore \
		   ../../storage/restrict/librestrictstore \
		   ../../storage/bpm/libbpmstore \
		   ../../common/libsqlcommon \
		   HAVE_RAPTOR?../../../monetdb5/extras/rdf/lib_rdf \
		   ../../../monetdb5/tools/libmonetdb5 \
		   ../../../gdk/libbat \
		   ../../../common/stream/libstream \
		   $(READLINE_LIBS) $(PTHREAD_LIBS)
}


