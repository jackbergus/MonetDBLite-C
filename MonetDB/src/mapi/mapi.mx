#define MAX_FRONTENDS 8
static int nr_frontends = 0;
static mapi_frontend *mapi_frontends[MAX_FRONTENDS] = { NULL };
static mapi_client mapi_clients[MAXCLIENTS + 1];
static int nr_mapi_clients = 0;
static MT_Lock mapi_cache_lock;

void
init_client_cache()
{
	int i;

	mapi_cache_lock = MT_create_lock();

	for(i=0; i<=MAX_FRONTENDS; i++)  
		mapi_frontends[i] = 0;
	nr_frontends = 0;
	
	for(i=0; i<=MAXCLIENTS; i++) { 
		mapi_clients[i].frontend = MAX_FRONTENDS;
		mapi_clients[i].inuse = 0;
		mapi_clients[i].c = monet_clients+i;
		mapi_clients[i].stk = i;
		mapi_clients[i].fc = NULL;
	}
	nr_mapi_clients = 0;
}

void
exit_client_cache()
{
	int i;

	MT_set_lock(mapi_cache_lock, "mapi_client_find");
	for(i=0; i<=MAXCLIENTS; i++) { 
		if (mapi_clients[i].frontend != MAX_FRONTENDS) { 
			/* no active client killing jet */
			mapi_client *fc = mapi_clients+i;
			
			fc->inuse = 2;
			MT_up_sema(fc->s, "exit_client_cache");
		}
	}
	MT_unset_lock(mapi_cache_lock, "mapi_client_find");
	/* wait for clients to finish */
	while(nr_mapi_clients > 0) 
		MT_sleep_ms(1000);	

	for(i=0; i<nr_frontends; i++) {
		GDKfree(mapi_frontends[i]->name);
		GDKfree(mapi_frontends[i]);
	}
	nr_frontends = 0;
}

int
MAPIregister( ptr *F ) 
{
	if (F && nr_frontends < MAX_FRONTENDS) {
		mapi_frontend *f = *(mapi_frontend**)F;
		f->nr = nr_frontends;
		f->clients = 0;
		mapi_frontends[nr_frontends++] = f;
	} else {
		GDKerror("Out of frontend slots");
		return GDK_FAIL;
	}
	return GDK_SUCCEED;
} 

static char *
mil_client_alloc(mapi_client *fc)
{
	fc->fc = fc;
	return NULL; /* no error */
}

static char * 
mil_client_init(mapi_client *fc)
{
	(void)fc;
	return NULL; /* no error */
}

static void
mil_client_engine(mapi_client *fc )
{
	Client c = fc->c;
	
	while (c->mode != FINISHING && !stream_errnr(c->fdin) && readClient(c)){
		if (parseClient(c, FALSE)) {
			ValRecord res;
			int i = interpret(c->stk, c->tree, &res);

			CATCHRET(c->stk, c->tree, (&res), i);
			CLEANUP(c->tree);
			c->tree->par_retval = i;
		}
	}
}

static void  
mil_client_free(mapi_client *fc)
{
	(void)fc;
}

int
mil_frontend( ptr *F )
{
/* TODO caching of mil clients requires a fix for the problem of 
	created/drop procs and loaded/dropped modules 

	char *m_clients = GDKgetenv("mapi_clients");
	int nr = (m_clients)?strtol(m_clients, NULL, 10):1;
*/
	mapi_frontend *f = (mapi_frontend*)GDKmalloc(sizeof(mapi_frontend));
	*F = f;
	f->name = GDKstrdup("mil");
	f->cache_limit = 0;
	f->f_alloc  = mil_client_alloc;
	f->f_init   = mil_client_init;
	f->f_free   = mil_client_free;
	f->f_engine = mil_client_engine; /* read/parse/execute loop */
	return GDK_SUCCEED;
}

static mapi_frontend*
find_frontend( char *l )
{
	int i;

	for(i=0; i<nr_frontends; i++) {
		if (strcmp(mapi_frontends[i]->name, l) == 0) {
			return mapi_frontends[i];
		}
	}
	return NULL;
}

static void
mapi_client_end(mapi_client *fc)
{
	Variable v;
	
        for(v=monet_cntxt[fc->stk].var; v != fc->lastvar; v = v->next){
		ATOMunfix(v->binding.vtype, VALptr(&v->binding));
		VALclear(&v->binding); /* -> void-nil (plus clean-up/free) */
		VALset(&v->binding, v->binding.vtype, ATOMnilptr(v->binding.vtype)); /* -> typed-nil */
	}
	if (fc->c->fdout) {
		stream_close(fc->c->fdout);
		stream_destroy(fc->c->fdout);
		fc->c->fdout = GDKstdout;
	}
	if (fc->c->fdin) {
		stream_close(fc->c->fdin);
		stream_destroy(fc->c->fdin);
		fc->c->fdin = GDKstdin;
	}
}

static void
mapi_client_free(mapi_client *fc)
{
	mapi_frontend *f = mapi_frontends[fc->frontend];

	MT_destroy_sema(fc->s);
	fc->c->mode = BLOCKMODE;
	closeClient(fc->c, 0);

	MT_set_lock(mapi_cache_lock, "mapi_client_find");
	f->clients --;
	nr_mapi_clients --;

	/* free this mapi slot */
	fc->frontend = MAX_FRONTENDS;
	fc->inuse = 0;

	MT_unset_lock(mapi_cache_lock, "mapi_client_find");
}

static mapi_client *
mapi_client_alloc_(mapi_frontend *f, Client c) 
{
	char *err;
	mapi_client *mc;
	int i = c - monet_clients;

	mc = mapi_clients+i;
	mc->frontend = f->nr;
	mc->inuse = 1;
	mc->t = ~(MT_Id)0;
	mc->s = MT_create_sema(0);
	mc->lastvar = monet_cntxt[mc->stk].var;
	if ((err = f->f_alloc(mc)) != NULL){
		stream_printf(c->fdout, "%s\n", err);

		mapi_client_end(mc); 
		mapi_client_free(mc);
		return NULL;
	}
	mc->lastvar = monet_cntxt[mc->stk].var;
	return mc;
}

static mapi_client *
mapi_client_alloc(mapi_frontend *f, Client father, Cntxt stk, stream *fdin, stream *fdout)
{
	char *mp = GDKgetenv("monet_prompt");
	Client c = NULL;
	
	MT_set_lock(mapi_cache_lock, "mapi_client_find");
	if (nr_mapi_clients < MAXCLIENTS) 
 		c = initClient("mapi", mp, FALSE);
		if (c) {
			f->clients ++;
			nr_mapi_clients ++;
		}
	MT_unset_lock(mapi_cache_lock, "mapi_client_find");
	if (c == 0) {
		stream_printf(fdout, "mapi_client_alloc:Failed to init client\n");
		return NULL;
	}
	c->mode = BLOCKMODE;
	c->listing = 0;
	c->login = time(0);
	c->fdin = fdin;
	c->fdout = fdout;
	CNTXTcopy(stk, c);
	TBL_initclient(c, father);
	return mapi_client_alloc_(f, c);
}

static mapi_client *
mapi_client_find(mapi_frontend *f )
{
	mapi_client *res = NULL;
	int i = 0;

	MT_set_lock(mapi_cache_lock, "mapi_client_find");
	for (i=1; i<MAXCLIENTS; i++) {
		mapi_client *mc = mapi_clients+i;
		
		if (mc->inuse == 0 && mc->frontend == f->nr && mc->frontend != MAX_FRONTENDS) {
			mc->inuse = 1;
			res = mc;
			break;
		}
	}
	MT_unset_lock(mapi_cache_lock, "mapi_client_find");
	return res;
}

static mapi_client *
mapi_client_get(mapi_frontend *f, Client c )
{
	mapi_client *mc, *res = NULL;
	int i = c - monet_clients;

	MT_set_lock(mapi_cache_lock, "mapi_client_get");
	mc = mapi_clients+i;
	mc->c = c;
	mc->thread = THRget(THRgettid());
	assert(mc->inuse == 0);
	if (mc->frontend == f->nr && mc->frontend != MAX_FRONTENDS) {
		mc->inuse = 1;
		res = mc;
	} else {
		res = mapi_client_alloc_(f, c);
	}
	MT_unset_lock(mapi_cache_lock, "mapi_client_get");
	return res;
}

static void
mapi_client_engine(void *FC )
{
	mapi_client *fc = (mapi_client*)FC;
	mapi_frontend *f = mapi_frontends[fc->frontend];

	fc->thread = THRnew(MT_getpid(), "mapi_client_engine"); 
	while(1) {
		MT_down_sema(fc->s, "mapi_client_engine"); /* wait for work */
		if (fc->inuse == 2)
			break;
		fc->thread->data[0] = fc->c->fdout;
		fc->thread->data[1] = fc->c->fdin;
		f->f_engine(fc);
		fc->c->mode = STARTING;
	
		mapi_client_end(fc);
		/* possible race condition, but net result is limited */
		if (f->clients > f->cache_limit) { 
			fc->inuse = 2;
			break;
		}
		fc->inuse = 0;
	}
	fc->inuse = 2;
	THRdel(fc->thread); 
	f->f_free(fc);
	mapi_client_free(fc);
}


static void
prompt(stream *fdout, int blocked)
{
	if (!blocked)
		stream_write(fdout, PROMPT1, sizeof(PROMPT1) - 1, 1);
	else
		stream_flush(fdout);
}

static mapi_client*
xchange_challenge(Client father, Cntxt stk, stream *fdin, stream *fdout, bit new_client)
{
	char buf[BLOCK];
	char *user, *passwd = NULL, *lang = NULL, *mode = NULL, *db = NULL;
	int blocked = 0;
	char *challenge, *err;
	int len;
	mapi_client *fc = NULL;
	mapi_frontend *f = NULL;
	Client c;

	user = buf;

	/* write challenge string, the challenge is currently empty */
	challenge = "::mserver:5\n";
	snprintf(buf, BLOCK, "%2u%s", 
		(unsigned int)strlen(challenge), challenge);
	stream_write(fdout, buf, strlen(buf), 1);
		
	/* get user:passwd:language:blocked|line[:database]\n */
	if ((len = stream_readline(fdin, user, BLOCK)) < 0) 
		return NULL;
	user[len] = 0;
	passwd = strchr(user, ':');
	if (passwd) {
		*passwd++ = 0;
		lang = strchr(passwd, ':');
	}
	if (lang) {
		*lang++ = 0;
		mode = strchr(lang, ':');
	}
	if (mode) {
		*mode++ = 0;
		db = strchr(mode, ':');
	}
	if (db) 
		*db++ = 0;

	if (mode && strncmp(mode, "blocked", 7) == 0) 
		blocked = 1;

	if (!user || !passwd || !lang || !mode) { 
		stream_printf(fdout, "!ERROR: client: protocol error\n");
		prompt(fdout, 0);
		return NULL;
	}

	if (blocked) {
		fdin = block_stream(stream_rstream(fdin));
		fdout = block_stream(stream_wstream(fdout));
	}
	f = find_frontend(lang);

	if (!f) {
		stream_printf(fdout,
		 "!ERROR: xchange_challenge: frontend %s not found\n", lang);
		prompt(fdout, blocked);
		return NULL;
	}
/* TODO
	if (db) {
		stream_printf(fdout,
		 "!ERROR: xchange_challenge: TODO database redirect\n");
		prompt(fdout, blocked);
		return NULL;
	}
*/

	if (new_client)
		fc = mapi_client_find(f);
	else
		fc = mapi_client_get(f, father);
	if (!fc) {
		if (!(fc = mapi_client_alloc(f, father, stk, fdin, fdout))) 
			return NULL;
	}

	c = fc->c;
	c->fdin = fdin;
	c->fdout = fdout;
	c->blocked = blocked;
	if (c->user)
		GDKfree(c->user);
	c->user = GDKstrdup(buf);
	c->passwd = GDKstrdup(passwd);


	if ((err = f->f_init(fc)) != NULL) {
		stream_printf(fdout, "%s\n", err);
		prompt(fdout, blocked);
		return NULL;
	}
	return fc;
}

