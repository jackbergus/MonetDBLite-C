<project name="java_mapi_examples" default="compile" basedir=".">

  <!-- set global properties for this build -->
  <property name="srcdir"             value="." /> <!-- todo: make src -->
  <property name="builddir"           value="build" />
  <property name="javac_version"      value="1.3" />
  <property name="mapi_jar"
    value="${buildir}/../../clients/java/jars/mapi.jar" /> 

  <!-- full target -->
  <target name="all">
    <antcall target="compile" />
  </target>

  <!-- compile targets -->
  <target name="compile" depends="prepare,mapi">
    <echo message="Compiling Java Mapi Examples" />
    <javac
      classpath="${srcdir}:${mapi_jar}"
      srcdir="${srcdir}"
      destdir="${builddir}"
      target="${javac_version}"
      source="${javac_version}"
      >
      <include name="**/*.java" />
    </javac>
  </target>

  <!-- Prepares the build directory -->
  <target name="prepare">
    <mkdir dir="${builddir}" />
  </target>

  <!-- This target removes the build and jar directory -->
  <target name="clean">
    <delete quiet="true" dir="${builddir}" />
  </target>

  <!-- makes sure the mapi driver is compiled -->
  <target name="mapi" depends="find_driver" unless="have_driver">
    <ant antfile="build.xml" dir="../../clients/java" inheritAll="false" target="jar_mapi" />
  </target>

  <target name="find_driver">
    <condition property="have_driver">
      <and>
        <available classname="mapi.Mapi">
          <classpath>
            <pathelement path="${mapi_jar}" />
          </classpath>
        </available>
      </and>
    </condition>
  </target>


  <!-- Run tests -->
  <target name="test">
    <antcall target="sample" />
  </target>

  <target name="test_class" depends="compile,mapi">
    <echo message="Testing class ${test.class}" />
    <java classname="${test.class}" failonerror="true">
      <classpath>
        <pathelement path="${builddir}" />
        <pathelement path="${mapi_jar}" />
      </classpath>
      <arg value="${host}" />
      <arg value="${port}" />
      <arg value="${test.arg}" />
    </java>
  </target>

  <target name="sample0">
    <antcall target="test_class">
      <param name="test.class" value="sample" />
      <param name="test.arg" value="false" />
    </antcall>
  </target>

  <target name="sample1">
    <antcall target="test_class">
      <param name="test.class" value="sample" />
      <param name="test.arg" value="true" />
    </antcall>
  </target>
  
</project>
