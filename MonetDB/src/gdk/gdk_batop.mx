	histo = BAThistogram(slice);
	target = (int) (BATcount(b) / n);	/* see assert above */
	scale = ((dbl) BATcount(b)) / ((dbl) BATcount(slice));
	BBPreclaim(slice);
	if ((sizes = (int *) GDKmalloc(2 * n * sizeof(int))) == NULL)
		goto bunins_failed;
	if ((seps = (ptr *) GDKmalloc(2 * n * sizeof(ptr))) == NULL)
