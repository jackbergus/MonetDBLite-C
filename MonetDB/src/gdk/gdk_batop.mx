	if ((GDK_SORTED@2 == GDK_SORTED && b->htype == TYPE_void) || (b->htype != TYPE_void && BATordered@3(b))) {
		/* b is already ordered as desired, hence we return a read-only copy/view of b */
		return BATcopy(b, b->htype, b->ttype, FALSE);
