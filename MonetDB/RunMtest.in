builddir=@QXMONETDB_BUILD@
# make sure srcdir contains absolute path name
srcdir=`cd '@Xsrcdir@'; pwd`
uname=`uname`

# where compiled modules are to be found
MOD_PATH="${builddir}/src/modules/plain/.libs:${builddir}/src/modules/contrib/.libs:${builddir}/src/modules/calibrator/.libs:${builddir}/src/modules/mnetcdf/.libs:${builddir}/src/mapi/.libs"

if [ "${LD_LIBRARY_PATH}" ] ; then
	LD_LIBRARY_PATH=":${LD_LIBRARY_PATH}"
fi
if [ "${uname}" = "Darwin"  -a  "${DYLD_LIBRARY_PATH}" ] ; then
	DYLD_LIBRARY_PATH=":${DYLD_LIBRARY_PATH}"
fi
if [ "${uname}" = "AIX"  -a  "${LIBPATH}" ] ; then
	LIBPATH=":${LIBPATH}"
fi

# enhance various paths to find our stuff
PATH="${builddir}/src/testing:${builddir}/src/tools:${builddir}/src/mapi/clients/C:${builddir}/src/mapi/clients/python:$PATH"
if [ "${uname}" = "IRIX64" ] ; then
	# on IRIX64 (at least when compiled with the MIPS compiler),
	# running Mserver via the wrapper-script ${builddir}/src/tools/Mserver
	# result in a bus error;
	# hence, we directly run the binary ${builddir}/src/tools/.libs/Mserver
	PATH="${builddir}/src/tools/.libs:$PATH"
fi
PYTHONPATH="${builddir}/src/testing:${srcdir}/src/testing:${builddir}/src/common:${srcdir}/src/mapi/clients/python"
libpath="${MOD_PATH}:${builddir}/src/common/.libs:${builddir}/src/gdk/.libs:${builddir}/src/mapi/clients/C/.libs:${builddir}/src/modules/plain/stream/.libs:${builddir}/src/monet/.libs"
LD_LIBRARY_PATH="${libpath}${LD_LIBRARY_PATH}"
if [ "${uname}" = "Darwin" ] ; then
	DYLD_LIBRARY_PATH="${libpath}${DYLD_LIBRARY_PATH}"
	export DYLD_LIBRARY_PATH
fi
if [ "${uname}" = "AIX" ] ; then
	LIBPATH="${libpath}${LIBPATH}"
	export LIBPATH
fi
export PATH PYTHONPATH LD_LIBRARY_PATH

# execute Mtest.py in the source directory
cd "$srcdir"

# check python version
type -a @PYTHON@
@PYTHON@ -V

# execute the script
# if no arguments, do a recursive test (Mtest.py -r), else pass on the
# arguments.
# if the environment variable MTEST_AT is set (value does not matter),
# pass the --at flag to Mtest.py so that it uses the at command as a
# watchdog.
exec @PYTHON@ "${builddir}/src/testing/Mtest.py" --monet_mod_path="${MOD_PATH}" --config="${builddir}/conf/MonetDB.conf" --dbfarm="${builddir}/dbfarm" --sql_logdir="${builddir}/log" --TSTTRGBASE="${builddir}" ${MTEST_AT+--at} "${@--r}"
