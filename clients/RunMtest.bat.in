@echo off

if not "%1"=="" goto skip
call %0 -rq
goto end

:skip

setlocal

set pkg=monetdb-clients
set builddir=@XCLIENTS_BUILD@
set srcdir=@XCLIENTS_SOURCE@

set PATH=%builddir%\conf;%PATH%
set PATH=%builddir%\src\mapiclient;%PATH%
set PATH=%builddir%\src\mapilib;%PATH%
set PATH=%builddir%\src\python;%PATH%

set PYTHONPATH=%srcdir%\src\python;%PYTHONPATH%

REM execute Mtest.py in the source directory
pushd %srcdir%

call Mtest.py --package=%pkg% "--TSTTRGBASE=%builddir%" %*

popd
endlocal

:end
