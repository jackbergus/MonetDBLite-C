<project name="java_mapi" default="all" basedir=".">

  <!-- set global properties for this build -->
  <property name="srcdir"             value="." /> <!-- todo: make src -->
  <property name="jardir"             value="jars" />
  <property name="builddir"           value="build" />
  <property name="javac_version"      value="1.3" />

  <!-- full target -->
  <target name="all">
    <antcall target="jar_mapi" />
  </target>

  <!-- jar targets -->
  <target name="jar_mapi" depends="compile_mapi">
    <jar jarfile="${jardir}/mapi.jar">
      <fileset dir="${builddir}">
        <include name="**/*.class" />
      </fileset>
      <manifest>
        <attribute name="Built-By" value="${user.name}" />
        <attribute name="Main-Class" value="MapiClient" />
      </manifest>
    </jar>
  </target>

  <!-- compile targets -->
  <target name="compile_mapi" depends="prepare">
    <echo message="Compiling Java Mapi" />
    <javac
      classpath="${srcdir}"
      srcdir="${srcdir}"
      destdir="${builddir}"
      target="${javac_version}"
      source="${javac_version}"
      >
      <include name="**/*.java" />
    </javac>
  </target>

  <!-- Prepares the build directory -->
  <target name="prepare">
    <mkdir dir="${builddir}" />
    <mkdir dir="${jardir}" />
  </target>

  <!-- This target removes the build and jar directory -->
  <target name="clean">
    <delete quiet="true" dir="${builddir}" />
    <delete quiet="true" dir="${jardir}" />
  </target>

</project>
