# make rules to generate MonetDB RPMs (works on RedHat Linux, only)

rpmtopdir = $(shell cd $(top_builddir) && pwd)/rpmbuild

rpmmacros = `rpmbuild --showrc | sed -n 's/macrofiles *: *//p'`:$(rpmtopdir)/rpmmacros

$(top_builddir)/$(distdir).tar.gz:
	$(MAKE) $(AM_MAKEFLAGS) dist

$(rpmtopdir)/rpmmacros:
	mkdir -p $(rpmtopdir)/RPMS
	mkdir -p $(rpmtopdir)/SRPMS
	mkdir -p $(rpmtopdir)/SPECS
	mkdir -p $(rpmtopdir)/BUILD
	mkdir -p $(rpmtopdir)/INSTALL

	echo "macrofiles: $(rpmmacros)" > $(rpmtopdir)/rpmrc

	echo "%_tmppath          /tmp"                >  $(rpmtopdir)/rpmmacros
	echo "%_topdir           $(rpmtopdir)"        >> $(rpmtopdir)/rpmmacros
	echo "%tmpdir            %{_tmppath}"         >> $(rpmtopdir)/rpmmacros
	echo "%rpmcflags         -O2 "                >> $(rpmtopdir)/rpmmacros
	echo "#%top_builddirroot %{_topdir}/INSTALL/" >> $(rpmtopdir)/rpmmacros
	echo "%dist              _@LINUX_DIST@"       >> $(rpmtopdir)/rpmmacros
	echo "%packager MonetDB Database System <monet@cwi.nl>" >> $(rpmtopdir)/rpmmacros
	if test "@oids@" -eq 32; then echo "%oid32 1" >> $(rpmtopdir)/rpmmacros; fi

rpm:	MonetDB-testing.spec $(top_builddir)/$(distdir).tar.gz $(rpmtopdir)/rpmmacros
	$(RPMBUILD) --macros "$(rpmmacros)" --rcfile $(rpmtopdir)/rpmrc -ta --target `uname -m` --define="buildsystem 1" --define="comp_cc @CC@" $(top_builddir)/$(distdir).tar.gz
	for i in $(rpmtopdir)/SRPMS/*_@LINUX_DIST@.oid@oids@* ; do \
		mv "$$i" "`echo "$$i" | sed 's|_@LINUX_DIST@.oid@oids@||'`" ; \
	done
	rm -rf $(rpmtopdir)/BUILD

srpm:	MonetDB-testing.spec $(top_builddir)/$(distdir).tar.gz $(rpmtopdir)/rpmmacros
	$(RPMBUILD) --macros "$(rpmmacros)" --rcfile $(rpmtopdir)/rpmrc -ts --define="buildsystem 1" $(top_builddir)/$(distdir).tar.gz
	for i in $(rpmtopdir)/SRPMS/*_@LINUX_DIST@.oid@oids@* ; do \
		mv "$$i" "`echo "$$i" | sed 's|_@LINUX_DIST@.oid@oids@||'`" ; \
	done

cleanup_distr:
	find MonetDB-testing-* -perm -0100 -type f ! -name \*.bat ! -name \*.sh ! -exec grep -q '^#!' {} \; -exec chmod a-x {} \;
	find MonetDB-testing-* -type f ! -name \*.in ! -name configure ! -name \*.spec -print | while read i; do test -f "$${i}.in" && rm -f "$${i}"; done || true
	find MonetDB-testing-* \( -name '*.[chm]' -o -name '*.cc' -o -name '*.mal' \) -exec sed -n -e "/^#line/!w $${TMPDIR:-/var/tmp}/mn-dist-$$$$" {} \; -exec chmod u+w {} \; -exec cp $${TMPDIR:-/var/tmp}/mn-dist-$$$$ {} \; && rm -f $${TMPDIR:-/var/tmp}/mn-dist-$$$$

dist-hook: cleanup_distr
