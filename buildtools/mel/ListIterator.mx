@f ListIterator
@a Niels Nes

@h
#ifndef _LISTITERATOR_H_
#define _LISTITERATOR_H_

class ListIterator {
      public:
	ListIterator(void **base, int nr);
	int next(void **obj);

      private:
	void **_base;
	int _nr;
	int _cur;
};


#endif // _LISTITERATOR_H_

@C
#include "ListIterator.h"

ListIterator::ListIterator(void **base, int nr)
{
	_base = base;
	_nr = nr;
	_cur = 0;
}

int
ListIterator::next ( void **obj)
{
	if (_cur < _nr) {
		*obj = _base[_cur++];
		return 1;
	}
	return 0;
}
