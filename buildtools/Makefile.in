# "Meta-Makefile[.in]" for buildtools

SRC="@SRC@"
BUILD="@BUILD@"
PREFIX="@PREFIX@"

# Run individual "make [all]"s ...
default: all
	@-echo

all:
	cd $(SRC)/autogen && python setup.py build
	cd MX && $(MAKE) $@
	cd MEL && $(MAKE) $@
	cd BURG && $(MAKE) $@

# ... run individual "make install"s ...
install:
	cd $(SRC)/autogen && python setup.py install --prefix=$(PREFIX)
	cd MX && $(MAKE) $@
	cd MEL && $(MAKE) $@
	cd BURG && $(MAKE) $@

# ... and individual "make *"s
%:
	cd MX && $(MAKE) $@
	cd MEL && $(MAKE) $@
	cd BURG && $(MAKE) $@
