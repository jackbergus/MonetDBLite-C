prefix = ..\NT
bindir = $(prefix)\bin

!IFDEF DEBUG
CFLAGS = -I. -GF -W3 -WX -MDd -nologo -Zi -Od -D_DEBUG -RTC1 -ZI
!ELSE
CFLAGS = -I. -GF -W3 -WX -MD -nologo
!ENDIF

COPY=copy
MKDIR=mkdir
MT=mt -nologo

all: Mx.exe

install: all
	if not exist "$(bindir)" $(MKDIR) "$(bindir)"
	$(COPY) Mx.exe "$(bindir)"

clean:
	del *.exe *.obj mx_config.h

MX_OBJS = Mx.obj Def.obj Form.obj Tok.obj Code.obj Display.obj \
	  Print.obj Io.obj Sys.obj disclaimer.obj getopt.obj
Mx.exe: $(MX_OBJS)
	$(CC) $(CFLAGS) /FeMx.exe $(MX_OBJS) /link /subsystem:console /NODEFAULTLIB:LIBC
	if exist $@.manifest $(MT) -manifest $@.manifest -outputresource:$@;1

$(MX_OBJS): mx_config.h

mx_config.h: winconfig.h
	$(COPY) winconfig.h mx_config.h
