@c
int
wkbBuffer( wkb **out, wkb *geom, dbl *distance)
{
	int ret = GDK_FAIL;
	GEOSGeom geosGeometry = wkb2geos(geom);

	if (geosGeometry) { 
		if ((*out=geos2wkb(GEOSBuffer( geosGeometry, *distance, -1))) != NULL) {
			ret = GDK_SUCCEED;
		}
		GEOSGeom_destroy(geosGeometry);
	}
	return ret;
}

