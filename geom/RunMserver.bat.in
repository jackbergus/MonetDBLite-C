@echo off

setlocal

rem if both M4 & M5 are available, M5 is default;
rem otherwise, the available one is default
if "@HAVE_MONETDB4_FALSE@" == "#" set V=4
if "@HAVE_MONETDB5_FALSE@" == "#" set V=5
rem commandline option overrules default
if "%1" == "-4" set V=4& shift
if "%1" == "-5" set V=5& shift

set monetdb4_prefix=@XMONETDB4_PREFIX@
set monetdb5_prefix=@XMONETDB5_PREFIX@
set sql_prefix=@XSQL_PREFIX@

set buildbase=@BUILD@
set builddir=%buildbase%\geom

set MOD_PATH=%builddir%\src\monetdb%V%\.libs
set MOD_PATH=%MOD_PATH%;%builddir%\src\monetdb%V%
set MOD_PATH=%MOD_PATH%;%builddir%\src\sql

if not %V% == 4 goto skip_4
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB4\src\modules\plain\.libs
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB4\src\modules\plain
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB4\src\modules\contrib\.libs
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB4\src\modules\contrib
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB4\src\modules\calibrator\.libs
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB4\src\modules\calibrator
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB4\src\mapi\.libs
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB4\src\mapi
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB4\src\modules\mnetcdf\.libs
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB4\src\modules\mnetcdf
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB4\scripts
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB4\scripts\tools
:skip_4

if not %V == 5 goto skip_5
set MOD_PATH=%MOD_PATH%;%buildbase%\sql\src\backends\monet5\.libs
set MOD_PATH=%MOD_PATH%;%buildbase%\sql\src\backends\monet5\.libs

set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB5\src\compiler\.libs
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB5\src\compiler
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB5\src\optimizer\.libs
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB5\src\optimizer
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB5\src\scheduler\.libs
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB5\src\scheduler
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB5\src\modules\atoms\.libs
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB5\src\modules\atoms
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB5\src\modules\kernel\.libs
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB5\src\modules\kernel
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB5\src\modules\mal\.libs
set MOD_PATH=%MOD_PATH%;%buildbase%\MonetDB5\src\modules\mal
:skip_5

set PATH=%MOD_PATH%;%PATH%

rem to find geos_c.dll
set PATH=%GEOS%\bin;%PATH%

if %V% == 4 set mserver=Mserver.exe
if %V% == 5 set mserver=mserver5.exe

%mserver% --set "monet_mod_path=%MOD_PATH%" %1 %2 %3 %4 %5 %6 %7 %8 %9

endlocal
