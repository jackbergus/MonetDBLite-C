# a is a bat sorted on head:
var a:=new(int,int).insert(1,0).insert(2,0).sort();
a.info().find("hsorted").print();
# b is a bat sorted on tail:
var b:=a.reverse();
b.info().find("tsorted").print();
var dbgmsk := debugmask();
debugmask(or(dbgmsk,10));
var c:=[+](b,1);
debugmask(dbgmsk);
c.info().find("tsorted").print();

module(bat_arith);
a:=new(int,void).insert(1,nil).insert(2,nil).sort();
a.reverse().seqbase(oid(0));
a.info().find("hsorted").print();
# b is a bat sorted on tail:
b:=a.reverse();
b.info().find("tsorted").print();
c:=[+](b,1);
c.info().find("tsorted").print();

