var vm := lng(0);

PROC check_vm():void {
	if (vm = lng(0)) {
		vm := vm_cursize();
	} else {
		var cur := vm_cursize();
		if (vm < cur) {
			printf("grew %lld bytes\n", cur - vm);
			vm := cur;
		}
	}
}

PROC print_stats() : void
{
	var b := view_gdk_bbp();
	b:=nil;
	check_vm();
}

var i := 0;
while (i<10000) {
	print_stats();
	i:+=1;
}
