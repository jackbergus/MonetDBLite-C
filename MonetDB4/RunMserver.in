buildbase=@QXBUILD@
builddir="${buildbase}/monetdb4"
# make sure srcdir contains absolute path name
srcdir=`cd '@Xsrcdir@'; pwd`
uname=`uname`

# where compiled monetdb4 modules are to be found
MOD_PATH="${builddir}/modules/plain/.libs:${builddir}/modules/plain:${builddir}/modules/contrib/.libs:${builddir}/modules/contrib:${builddir}/modules/calibrator/.libs:${builddir}/modules/calibrator:${builddir}/mapi/.libs:${builddir}/mapi"
@HAVE_NETCDF_TRUE@ MOD_PATH="${MOD_PATH}:${builddir}/modules/mnetcdf/.libs:${builddir}/modules/mnetcdf"

if [ "${LD_LIBRARY_PATH}" ] ; then
	LD_LIBRARY_PATH=":${LD_LIBRARY_PATH}"
fi
if [ "${uname}" = "Darwin"  -a  "${DYLD_LIBRARY_PATH}" ] ; then
	DYLD_LIBRARY_PATH=":${DYLD_LIBRARY_PATH}"
fi
if [ "${uname}" = "AIX"  -a  "${LIBPATH}" ] ; then
	LIBPATH=":${LIBPATH}"
fi

# enhance various paths to find our stuff
PATH="${builddir}/tools:$PATH"
if [ "${uname}" = "IRIX64" ] ; then
	# on IRIX64 (at least when compiled with the MIPS compiler),
	# running Mserver via the wrapper-script ${builddir}/tools/Mserver
	# results in a bus error;
	# hence, we directly run the binary ${builddir}/tools/.libs/Mserver
	PATH="${builddir}/tools/.libs:$PATH"
fi
libpath="${MOD_PATH}:${builddir}/monet/.libs"
LD_LIBRARY_PATH="${libpath}${LD_LIBRARY_PATH}"
if [ "${uname}" = "Darwin" ] ; then
	DYLD_LIBRARY_PATH="${libpath}${DYLD_LIBRARY_PATH}"
	export DYLD_LIBRARY_PATH
fi
if [ "${uname}" = "AIX" ] ; then
	LIBPATH="${libpath}${LIBPATH}"
	export LIBPATH
fi
export PATH LD_LIBRARY_PATH

exec Mserver --config="${builddir}/conf/MonetDB.conf" --set monet_mod_path="${MOD_PATH}" --dbfarm="${builddir}/dbfarm" ${1+"$@"}
