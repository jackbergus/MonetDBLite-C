@f unix
@t Unix standard library calls
@a Tim Ruhl, A.R. van Ballegooij
@d 06/06/2001
@v 0.2

@T
@* Unix stdlib

Provides access to some of the C stdlib.h functions.

@* Module Definition
@m
.MODULE unix;

  .COMMAND getenv(str) : str = unix_getenv;
    "Get the environment variable string."
  .COMMAND setenv(str,str) : bit = unix_setenv;
    "Set the environment variable string."

.END unix;

@{
@- Implementation
The remainder is a straight forward mapping to the underlying
facilities
@c
#include "monetdb4_config.h"

#include "unix.proto.h"

#include <stdio.h>
#include <stdlib.h>
#include <stdarg.h>

/*----------------------------------------------------------------------------
 * The Basic UNIX commands.
 */

int
unix_getenv(str *res, str varname)
{
	char *p = getenv(varname);

	if (p)
		*res = GDKstrdup(p);
	else
		*res = GDKstrdup("");
	return GDK_SUCCEED;
}

int
unix_setenv(bit *res, str varname, str valname)
{
#ifdef HAVE_PUTENV		/* prefer POSIX putenv */
	/* leaks memory when varname value reused */
	size_t len = strlen(varname) + strlen(valname) + 2;
	char *envval = GDKmalloc(len);

	strcpy(envval, varname);
	strcat(envval, "=");
	strcat(envval, valname);
	*res = putenv(envval);
	/* don't free envval! */
#else
#ifdef HAVE_SETENV
	*res = setenv(varname, valname, TRUE);
#else
	*res = -1;
#endif
#endif
	return GDK_SUCCEED;
}
@}
