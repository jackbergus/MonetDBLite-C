INCLUDES = -I.. -I../monet \
	   -I../modules/plain -I../modules/plain/stream \
	   $(MONETDB_INCS) $(OPENSSL_INCS)

MTSAFE

# install these libs in the pkglib
lib__mapi = {
	DIR = libdir/MonetDB4
	SOURCES = mapi.mx
	#SCRIPTS = mil ""
	LIBS =  $(MONETDB_LIBS) -lmutils -lstream -lbat \
		../monet/libmonet \
		$(SOCKET_LIBS) $(MALLOC_LIBS) $(PTHREAD_LIBS) \
		$(DL_LIBS) $(OPENSSL_LIBS)

}

headers__mapi = {
	DIR = includedir/MonetDB4/mapi
	SOURCES = mapi.mx
	HEADERS = h proto.h m
}

headers_mil = {
	HEADERS = mil
	DIR = libdir/MonetDB4
	SOURCES = mapi.mx
}

EXTRA_DIST_DIR = Tests
