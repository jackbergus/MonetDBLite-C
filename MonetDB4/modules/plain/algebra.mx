	    "Returns all BUNs where not (*fcn)(tail,,..params..)", "algebra");

    PROC rev_select(bat[any::1,any::2] b, str fcn, any::2 val) : bat[any::1,any::2]
    {
	if (fcn = "=") {
	    return b.mil_select("=",val);
	} else if (fcn = "!=") {
	    return b.mil_select("!=",val);
	} else if (fcn = ">") {
	    return b.mil_select("<",val);
	} else if (fcn = "<") {
	    return b.mil_select(">",val);
	} else if (fcn = "<=") {
	    return b.mil_select(">=",val);
	} else if (fcn = ">=") {
	    return b.mil_select("<=",val);
	}
	ERROR("rev_select: unknown predicate %s(%s)\n", fcn, str(val));
    }
