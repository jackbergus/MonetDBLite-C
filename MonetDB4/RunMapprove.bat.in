@echo off

if not "%1"=="" goto skip
call %0 -r
goto end

:skip

setlocal

set pkg=monetdb4
set buildbase=@XBUILD@
set builddir=%buildbase%\monetdb4
set srcdir=@XSOURCE@\monetdb4

set PYTHONPATH=%buildbase%\testing\src;%srcdir%\..\testing\src;%PYTHONPATH%

REM execute Mapprove.py in the source directory
pushd %srcdir%

call "%buildbase%\testing\src\Mapprove.py" "--config=%builddir%\conf\MonetDB.conf" --package=%pkg% "--TSTTRGBASE=%builddir%" %*

popd
endlocal

:end
