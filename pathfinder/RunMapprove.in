pkg=pathfinder
buildbase=@QBUILD@
builddir="${buildbase}/pathfinder"
# make sure srcdir contains absolute path name
srcdir=`cd '@srcdir@'; pwd`

# default back-end is MonetDB4
V=4
for arg
do
    case "$arg" in
    -4) V=4;;
    -5) V=5;;
    esac
done

PYTHONPATH="${buildbase}/testing/src:${srcdir}/../testing/src:${PYTHONPATH}"
export PYTHONPATH

# execute Mapprove.py in the source directory
cd "$srcdir"

# execute the script.
# if no arguments, do a recursive approve (Mapprove.py -r), else pass
# on the arguments
exec python "${buildbase}/testing/src/Mapprove.py" -$V --package=${pkg} --TSTTRGBASE="${builddir}" "${@--r}"
