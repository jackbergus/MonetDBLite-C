builddir=`pwd`
# make sure srcdir contains absolute path name
srcdir=`cd '@srcdir@'; pwd`

MONETDB_PREFIX=@MONETDB_PREFIX@

if [ ! -x "$MONETDB_PREFIX/bin/Mapprove.py" ]
then
	echo "Mapprove.py not found, install MonetDB first" >&2
	exit 1
fi

# enhance various paths to find our stuff
PATH="$builddir/src/client:$builddir/src/tools:$MONETDB_PREFIX/bin:$PATH"
# PYTHONPATH="$builddir/src/testing:$srcdir/src/testing:$builddir/src/common:$srcdir/src/mapi/clients/python"
export PATH # PYTHONPATH

# execute Mapprove.py in the source directory
cd "$srcdir"

# check python version
type -a @PYTHON@
@PYTHON@ -V

# execute the script
# if no arguments, do a recursive approve (Mapprove.py -r), else pass
# on the arguments
exec Mapprove.py --TSTSRCBASE="$srcdir" --TSTBLDBASE="$builddir" --TSTTRGBASE="$builddir" "${@--r}"
