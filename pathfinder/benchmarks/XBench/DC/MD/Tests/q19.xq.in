let $doc :=
for $d in doc("$TSTTRGDIR/load_docs.xml")//doc/text()
return doc($d)
for $order in $doc/order,
    $cust in $doc/customers/customer
where $order/customer_id = $cust/@id
    and $order/@id = "7"
return
    <Output>
        {$order/@id}
        {$order/order_status}
        {$cust/first_name}
        {$cust/last_name}
        {$cust/phone_number}
    </Output>
