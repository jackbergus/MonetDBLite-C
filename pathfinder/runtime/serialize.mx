static void
fatal_err(XqueryCtx* ctx, const char *msg, ...)
{
    va_list msgs;
    char    errmsg[1024];

    (void)ctx;
    va_start (msgs, msg);
    vsnprintf (errmsg, 1024, msg, msgs);
    va_end (msgs);

    GDKerror("XML Generation: %s\n",errmsg);
}

