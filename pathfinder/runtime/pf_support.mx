PROC delete_nodes_prepare (BAT[void,oid] item, BAT[void,int] kind, BAT[void,bat] ws) : BAT[bat,bat] {
    var res := nil;
    
    if ( isnil(seqbase(item)) or isnil(seqbase(kind)) ) {
        ERROR("delete_nodes: heads of item & kind must not be NIL!");
        return res;
    }
    if ( (count(item) != count(kind)) or (seqbase(item) != seqbase(kind)) ) {
        ERROR("delete_nodes: heads of item & kind must be aligned!");
        return res;
    }
    if (count(item) = 0) {
        res := new(bat,bat,0).access(BAT_READ);
    } else {
        var bit30 := 1<<30;
        var order :=  3; # input & output of location step is sorted on item
        var cols  := 13; # number of PRE_* columns and *NID* indices to be updated: 
                         # PRE_{SIZE,LEVEL,KIND,PROP,NID}, NID_RID, KND_{NID_[0-4],PROP_{0,3}}
        var cont  := kind.get_container();
            kind  := nil;
        var uCont := cont.tunique().sort();
            res   := new(bat, bat, cols * count(uCont));
	uCont@batloop () {
	    var contID  := $h;
            var pre_size := ws.fetch(PRE_SIZE).fetch(contID);
            if (count(pre_size) > 0) {
                var conts := cont.ord_uselect(contID).project(nil).reverse();
                if (count(conts) > 0) {
                    var items    := conts.leftfetchjoin(item).reverse().sort().mark(0@0).reverse();
                        conts    := nil;
                    var iters    := items.project(0@0); # we don\'t care about iters, here
                    var cands    := pre_size.project(nil).reverse().chk_order();
                    var descs    := descendant_or_self (iters, items, contID, ws, order, cands);
                        cands    := nil;
                        iters    := nil;
                        items    := nil;
                    var pre_     := descs.reverse().project(nil).chk_order();
                        descs    := nil;

                        res      := res.insert(ws.fetch(PRE_SIZE ).fetch(contID), delete_nodes_prepare_pre_size(pre_size, pre_));
                        pre_size := nil;
                    var pre_chr  := pre_.[chr]();
                        res      := res.insert(ws.fetch(PRE_LEVEL).fetch(contID), pre_chr);
                        res      := res.insert(ws.fetch(PRE_KIND ).fetch(contID), pre_chr);
                        pre_chr  := nil;
                        res      := res.insert(ws.fetch(PRE_PROP ).fetch(contID), pre_);
                        res      := res.insert(ws.fetch(PRE_NID  ).fetch(contID), pre_);
                    var pre_nid  := ws.fetch(PRE_NID).fetch(contID);
                    var nid_     := pre_.reverse().leftfetchjoin(pre_nid).reverse().sort();
                        pre_     := nil;
                        pre_nid  := nil;
                        res      := res.insert(ws.fetch(NID_RID  ).fetch(contID), nid_);
                    
                    var knd := ELEMENT;
                    while ( knd <= DOCUMENT ) {
                        var knd_nid := ws.fetch(KND_NID.find(knd)).fetch(contID);
                        var knd_    := knd_nid.leftjoin(nid_);
                        if (count(knd_) > 0) {
                            res     := res.insert(knd_nid, knd_);
                        }
                        if ( (knd = ELEMENT) or (knd = PI) ) {
                            var knd_prop := ws.fetch(KND_PROP.find(knd)).fetch(contID);
                                knd_     := knd_prop.leftjoin(nid_);
                            if (count(knd_) > 0) {
                                res      := res.insert(knd_prop, knd_);
                            }
                        }
                        knd :+= chr(1);
                    }
                }
            }
        }
        res := res.access(BAT_READ);
    }
    return res;
}
