proc myinsert(bat[any::1,any::2] oldbat, bat[any::1,any::2] newbat) : bat[any::1,any::2]
{
  var newvals := kdiff(newbat, oldbat).sort();
  var replvals := kdiff(newbat, newvals).sort();
  return oldbat.replace(replvals, true).insert(newvals);
}
