proc myinsert(bat[any::1,any::2] oldbat, any::1 key, any::2 val) : bat[any::1,any::2]
{
  if (oldbat.exist(key)) {
    oldbat := oldbat.replace(key, val);
  } else {
    oldbat := oldbat.insert(key, val);
  }
  return oldbat;
}
