# do a "find" on replacements, creating a tuple if it didn't already occur in replacements
proc replacementsfind(BAT[BAT,BAT] replacements, BAT[any::1,any::2] oldbat): BAT[any::1,any::2]
{
  if (replacements.exist(oldbat)) {
    return replacements.find(oldbat);
  } else {
    var htype := oldbat.htype();
    if (htype = void)
      htype := oid;
    var ttype := oldbat.ttype();
    if (ttype = void)
      ttype := oid;
    var newbat := new(htype, ttype).key(true);
    replacements := replacements.insert(oldbat, newbat);
    return newbat;
  }
}
