proc replacementvalue(BAT[bat,bat] replacements, BAT[any::1,any::2] oldbat, any::1 key): any::2
{
  if (replacements.exist(oldbat)) {
    var newbat := replacements.find(oldbat);
    if (isnil(newbat)) {
      return oldbat.find(key);
    }
    if (newbat.exist(key)) {
      return newbat.find(key);
    } else {
      return oldbat.find(key);
    }
  } else {
    return oldbat.find(key);
  }
}
