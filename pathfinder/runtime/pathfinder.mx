 */
static char xquery_function_error[80] = "xquery_method: error during execution.\n";
static char* 
xquery_function_call(xquery_client *ctx, int msec, char *mode, char *ns, char *method, int argc, int* argcnt, char** argtpe, char** argval, BAT *docBAT) 
{
    xquery_prepared_function *prepfun = ctx->prepared_functions;
