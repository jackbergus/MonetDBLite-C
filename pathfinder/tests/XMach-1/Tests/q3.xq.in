declare namespace my='my-functions';
declare function my:deepestFirstSection($e as node()?) as node()?
{
  if (empty($e/section10)) then $e
  else my:deepestFirstSection(zero-or-one($e/section10[1]))
};

let $doc :=
	for $d in doc("$TSTTRGDIR/load_docs.xml")//doc/text()
	return doc($d)
return my:deepestFirstSection(zero-or-one($doc/document10[@doc_id="d1"]/chapter10[1]/section10[1]))
