let $doc :=
	for $d in doc("$TSTTRGDIR/load_docs.xml")//doc/text()
	return doc($d)
for $a in  $doc/*[@doc_id]
where $a//*/author="Karl May"
return
  <document>
    <doc_id>{data($a/@doc_id)}</doc_id>
    {
      for $e in $a//*[author="Karl May"]
      return
        <parent_id>{data($e/@id)}</parent_id>
    }
  </document>
