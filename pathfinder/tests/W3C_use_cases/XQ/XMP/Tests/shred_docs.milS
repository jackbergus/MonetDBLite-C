module(unix);
module(pathfinder);
var TSTTRGDIR := getenv("TSTTRGDIR");
var names := bat(void,str,4).seqbase(0@0);
names := names.append("bib.xml");
names := names.append("books.xml");
names := names.append("prices.xml");
names := names.append("reviews.xml");
names := names.access(BAT_READ);

var locations := (TSTTRGDIR+"/shred_docs.") [+] names;
var colnames  := names; #.project("XMP");
var pageFrees := names.project(0LL);

shred_doc(locations, names, colnames, pageFrees);
