    # calculating the score for each region
    reg_score := {sum}(ctx_res.reverse().join(right));
    #reg_score := kunion(reg_score, ctx);

	if (scoreBase = 0)
		res_reg := [+](reg_score, left);
	else if (scoreBase = 1)
		res_reg := [*](left, reg_score);
    
