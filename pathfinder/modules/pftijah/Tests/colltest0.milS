              .append(path+"/xml-docs/cdilbert2.xml")
              .append(path+"/xml-docs/cdilbert3.xml").seqbase(0@0),
          bat(void,str)
	      .append("cdilbert1.xml")
	      .append("cdilbert2.xml")
	      .append("cdilbert3.xml").seqbase(0@0),
	  bat(void,str)
	      .append("PFCOLL")
	      .append("PFCOLL")
	      .append("PFCOLL").seqbase(0@0),
	  bat(void,lng)
	      .append(0LL)
	      .append(0LL)
	      .append(0LL).seqbase(0@0));

