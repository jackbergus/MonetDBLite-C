Atom:               LiteralValue                                =  58 (10);

LiteralValue:       lit_str                                     =  59 (10);
LiteralValue:       lit_int                                     =  60 (10);
LiteralValue:       lit_dec                                     =  61 (10);
LiteralValue:       lit_dbl                                     =  62 (10);
LiteralValue:       true_                                       =  63 (10);
LiteralValue:       false_                                      =  64 (10);

