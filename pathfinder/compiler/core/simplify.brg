CoreExpr:           attr (TagName, CoreExpr)                    =  38 (10);
CoreExpr:           text (CoreExpr)                             =  39 (10);
CoreExpr:           doc (CoreExpr)                              =  40 (10);
CoreExpr:           comment (CoreExpr)                          =  41 (10);
CoreExpr:           pi (Atom, Atom)                             =  42 (10);

