LocationStep:       ancestor (SequenceType)                     =  23 (10);
LocationStep:       ancestor_or_self (SequenceType)             =  24 (10);
LocationStep:       attribute (SequenceType)                    =  25 (10);
LocationStep:       child (SequenceType)                        =  26 (10);
LocationStep:       descendant (SequenceType)                   =  27 (10);
LocationStep:       descendant_or_self (SequenceType)           =  28 (10);
LocationStep:       following (SequenceType)                    =  29 (10);
LocationStep:       following_sibling (SequenceType)            =  30 (10);
LocationStep:       parent (SequenceType)                       =  31 (10);
LocationStep:       preceding (SequenceType)                    =  32 (10);
LocationStep:       preceding_sibling (SequenceType)            =  33 (10);
LocationStep:       self (SequenceType)                         =  34 (10);

