%%

Query:              main (FunctionDecls, CoreExpr)              =   1 (10);

CoreExpr:           Atom                                        =   2 (10);
CoreExpr:           SequenceTypeCast                            =   3 (10);

CoreExpr:           for_ (forbind (forvars (var, nil),
                                   LiteralValue),
                          CoreExpr)                             =  4 (10);
CoreExpr:           for_ (forbind (forvars (var, Var),
                                   LiteralValue),
                          CoreExpr)                             =  5 (10);
CoreExpr:           for_ (forbind (forvars (var, OptVar),
                                   Atom),
                          CoreExpr)                             =  6 (10);

OptVar:             nil                                         =  7 (10);
OptVar:             var                                         =  8 (10);

CoreExpr:           let (letbind (var, Atom), CoreExpr)         =  9 (10);
CoreExpr:           let (letbind (var,
                                  let (letbind (var, CoreExpr),
                                       CoreExpr)),
                         CoreExpr)                              =  10 (10);
CoreExpr:           let (letbind (var, CoreExpr), CoreExpr)     =  11 (10);

CoreExpr:           typesw (Atom,
                            cases (case_ (SequenceType,
                                          CoreExpr),
                                   default_ (CoreExpr)))        =  12 (10);

SequenceType:       seqtype                                     =  13 (10);
SequenceType:       stattype (CoreExpr)                         =  14 (10);

