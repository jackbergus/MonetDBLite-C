SUBDIRS = schema debug mem parser semantics core algebra mil include

EXTRA_DIST_DIR = Tests

INCLUDES = include $(MONETDB_INCS) $(LIBXML2_CFLAGS)

lib_compiler1 = {
	NOINST
	DIR = libdir
	SOURCES = \
	     compile.c
}
lib_compiler2 = {
	NOINST
	DIR = libdir
	SOURCES = \
	     env.c \
	     oops.c \
	     pfstrings.c \
	     qname.c \
	     scope.c \
	     timer.c \
	     variable.c
}
bin_pf = {
	LIBS = \
		libcompiler1 \
		schema/libschema \
		debug/libdebug \
		mem/libmem \
		parser/libparser \
		semantics/libsemantics \
		core/libcore \
		algebra/libalgebra \
		algebra/opt/libopt \
		algebra/prop/libprop \
		mil/libmil \
		libcompiler2 \
		$(LIBXML2_LDADD) $(LIBXML2_LIBS) \
		$(SOCKET_LIBS) $(DL_LIBS)
		
	SOURCES = \
	     main.c
}
