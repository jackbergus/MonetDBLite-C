@echo off

if not "%1"=="" goto skip
call %0 -r
goto end

:skip

setlocal

set monetdb4_prefix=@XMONETDB4_PREFIX@
set builddir=@XPATHFINDER_BUILD@
set srcdir=@XPATHFINDER_SOURCE@

REM execute Mapprove.py in the source directory
pushd %srcdir%

call Mapprove.py "--config=%monetdb4_prefix%\etc\MonetDB.conf" "--TSTSRCBASE=%srcdir%" "--TSTTRGBASE=%builddir%" %*

popd
endlocal

:end
