@echo off

if not "%1"=="" goto skip
call %0 -r
goto end

:skip

set builddir=@MONETDB_BUILD@
set srcdir=@MONETDB_SOURCE@

set MOD_PATH=%builddir%\runtime;%builddir%\modules\pftijah;@MONETDB_PREFIX@\lib\MonetDB

set PATH=%builddir%\compiler;@MONETDB_PREFIX@\bin;@MONETDB_PREFIX@\lib;%PATH%
set PATH=%MOD_PATH%;%PATH%

REM execute Mtest.py in the source directory
cd %srcdir%

call python "@MONETDB_PREFIX@\bin\Mtest.py" "--monet_mod_path=%MOD_PATH%" "--PF_PREFIX=%builddir%" "--TSTSRCBASE=%srcdir%" "--TSTBLDBASE=%builddir%" "--TSTTRGBASE=%builddir%" "--dbfarm=%builddir%\dbfarm" %*

:end
