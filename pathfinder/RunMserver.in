builddir="${buildbase}/pathfinder"

# where compiled modules are to be found
MOD_PATH="${builddir}/runtime/.libs:${builddir}/runtime:${builddir}/modules/pftijah/.libs:${builddir}/modules/pftijah:`monetdb4-config --modpath`"

exec Mserver --set monet_mod_path="${MOD_PATH}" --dbfarm="${builddir}/dbfarm" ${1+"$@"}
